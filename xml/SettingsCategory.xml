<?xml version="1.0" encoding="utf-8"?>
<window>
	<!-- Settings -->
	<backgroundcolor>0x00000000</backgroundcolor>
	
	<!-- Sidemenu menucontrol -->
	<menucontrol>3001</menucontrol>
	
	<!--Welcome screen -->
	<onload condition="String.IsEmpty(Skin.String(WelcomeDialogShown)) + !System.HasAddon(service.osmc.settings)">ActivateWindow(1101)</onload>
	
	<!-- Skin Shortcuts -->
	<onunload condition="System.HasAddon(script.skinshortcuts)">RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;group=mainmenu&amp;levels=1&amp;options=noGroups)</onunload>
	
	<!-- Skin settings, background + colors -->
	<include>Onloads</include>

	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>
		
		<!-- Time -->
		<include>Time</include>

		<control type="group">
			<include>WindowFadeAnimation</include>

			<!-- Main list (Left) -->
			<control type="grouplist" id="3">
				<include>SettingsCategory_coords1</include>
				<itemgap>0</itemgap>
				<onleft>3001</onleft>
				<onright>5</onright>
				<ondown>20</ondown>
				<orientation>vertical</orientation>
				<scrolltime tween="sine" easing="out">240</scrolltime>
			</control>

			<!-- Sub list (Right) -->
			<control type="grouplist" id="5">
				<include>SettingsCategory_coords2</include>
				<itemgap>0</itemgap>
				<onleft>3</onleft>
				<onright>998</onright>
				<orientation>vertical</orientation>
			</control>

			<!-- Settings description -->
			<control type="textbox" id="6">
				<include>SettingsCategory_coords3</include>
				<textcolor>$VAR[TextColor1]</textcolor>
				<font>Font27</font>
			</control>

			<!-- Indicators -->
			<control type="group">
				<include>SettingsCategory_coords4</include>
			</control>

			<control type="grouplist">
				<include>SettingsCategory_coords5</include>
				<itemgap>0</itemgap>
				<align>left</align>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="label">
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>$LOCALIZE[31016]: </label>
					<font>Font33</font>
					<textcolor>$VAR[TextColor2]</textcolor>
					<visible>!Control.HasFocus(20)</visible>
				</control>
				<control type="label">
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>$LOCALIZE[31016]: </label>
					<font>Font33</font>
					<textcolor>$VAR[TextColor1]</textcolor>
					<visible>Control.HasFocus(20)</visible>
				</control>
				<control type="button" id="20">
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<font>Font33</font>
					<onup>3</onup>
					<onclick>SettingsLevelChange</onclick>
					<texturefocus colordiffuse="$VAR[buttonfocus]">common/focus.png</texturefocus>
				</control>
			</control>

			<!-- Submenu indicator -->
			<control type="group">
					<visible>!ControlGroup(9002).HasFocus + !ControlGroup(5).HasFocus + !Control.HasFocus(20)</visible>
					<animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
					<animation effect="slide" time="200" start="-200,0" end="0,0">WindowOpen</animation>
					<animation effect="slide" time="200" start="0,0" end="-200,0">WindowClose</animation>
					<control type="image">
						<left>10</left>
						<centertop>50%</centertop>
						<width>30</width>
						<height>30</height>
						<texture colordiffuse="$VAR[DialogColor2]">sub-menu-left.png</texture>
					</control>
				</control>

			<!-- Options -->
			<control type="group" id="9002">
				<control type="image">
					<include>FullscreenDimensions</include>
					<texture colordiffuse="$VAR[DarkenColor]">dialogs/DialogTextBackground.png</texture>
					<animation effect="fade" start="0" end="100" time="200">Visible</animation>
					<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
					<visible>ControlGroup(9002).HasFocus</visible>
				</control>
				<control type="group">
					<left>-450</left>
					<top>0</top>
					<animation effect="slide" start="0,0" end="450,0" time="200" condition="ControlGroup(9002).HasFocus">Conditional</animation>
					<control type="image">
						<include>OptionsSideMenu1</include>
						<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
					</control>
					<control type="button">
						<include>OptionsSideMenu1</include>
						<texturefocus>noop</texturefocus>
					</control>

					<!-- Look controls -->
					<control type="grouplist" id="3001">
						<include>OptionsSideMenu3</include>
						<onleft>3</onleft>
						<onright>3</onright>
						<scrolltime>200</scrolltime>
						<orientation>vertical</orientation>
						<itemgap>0</itemgap>
						<defaultcontrol always="true">90</defaultcontrol>

						<include content="SideMenuAnimation">
							<param name="containerID">3001</param>
						</include>

						<!-- Settings quick-nav -->
						<control type="button" id="90">
							<label>14206</label>
							<height>52</height>
							<onclick>ReplaceWindow(InterfaceSettings)</onclick>
							<texturefocus colordiffuse="$VAR[buttonfocus]">common/focus52.png</texturefocus>
						</control>
						<control type="button" id="91">
							<label>16003</label>
							<height>52</height>
							<onclick>ReplaceWindow(PlayerSettings)</onclick>
							<texturefocus colordiffuse="$VAR[buttonfocus]">common/focus52.png</texturefocus>
						</control>
						<control type="button" id="92">
							<label>14211</label>
							<height>52</height>
							<onclick>ReplaceWindow(MediaSettings)</onclick>
							<texturefocus colordiffuse="$VAR[buttonfocus]">common/focus52.png</texturefocus>
						</control>
						<control type="button" id="93">
							<label>31015</label>
							<height>52</height>
							<onclick>ReplaceWindow(PVRSettings)</onclick>
							<texturefocus colordiffuse="$VAR[buttonfocus]">common/focus52.png</texturefocus>
						</control>
						<control type="button" id="94">
							<label>15016</label>
							<height>52</height>
							<onclick>ReplaceWindow(GameSettings)</onclick>
							<texturefocus colordiffuse="$VAR[buttonfocus]">common/focus52.png</texturefocus>
						</control>
						<control type="button" id="95">
							<label>13200</label>
							<height>52</height>
							<onclick>ReplaceWindow(Profiles)</onclick>
							<texturefocus colordiffuse="$VAR[buttonfocus]">common/focus52.png</texturefocus>
						</control>
						<control type="button" id="96">
							<label>14036</label>
							<height>52</height>
							<onclick>ReplaceWindow(ServiceSettings)</onclick>
							<texturefocus colordiffuse="$VAR[buttonfocus]">common/focus52.png</texturefocus>
						</control>
						<control type="button" id="97">
							<label>13000</label>
							<height>52</height>
							<onclick>ReplaceWindow(SystemSettings)</onclick>
							<texturefocus colordiffuse="$VAR[buttonfocus]">common/focus52.png</texturefocus>
						</control>
						<control type="button" id="98">
							<label>130</label>
							<height>52</height>
							<onclick>ReplaceWindow(SystemInfo)</onclick>
							<texturefocus colordiffuse="$VAR[buttonfocus]">common/focus52.png</texturefocus>
						</control>

						<include>SideMenuControls</include>

					</control>
				</control>
			</control>

			<!-- Default label -->
			<control type="label" id="14">
				<include>SettingsCategory_coords6</include>
				<font>Font33</font>
				<align>center</align>
				<label></label>
				<textcolor>$VAR[TextColor2]</textcolor>
			</control>

			<!-- Default group button -->
			<control type="button" id="10">
				<include>SettingsCategory_coords7</include>
				<font>Font33</font>
				<onclick>SetFocus(5)</onclick>
				<textcolor>$VAR[TextColor2]</textcolor>
				<focusedcolor>$VAR[TextColor1]</focusedcolor>
				<invalidcolor>$VAR[InvalidColor]</invalidcolor>
				<disabledcolor>$VAR[DisabledColor]</disabledcolor>
				<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="false" condition="ControlGroup(5).HasFocus | Control.HasFocus(20)">Conditional</animation>
			</control>

			<!-- Default button -->
			<control type="button" id="7">
				<include>SettingsCategory_coords8</include>
				<font>Font33</font>
				<textcolor>$VAR[TextColor2]</textcolor>
				<focusedcolor>$VAR[TextColor1]</focusedcolor>
				<invalidcolor>$VAR[InvalidColor]</invalidcolor>
				<disabledcolor>$VAR[DisabledColor]</disabledcolor>
			</control>

			<!-- Default radiobutton -->
			<control type="radiobutton" id="8">
				<include>SettingsCategory_coords8</include>
				<font>Font33</font>
				<textcolor>$VAR[TextColor2]</textcolor>
				<focusedcolor>$VAR[TextColor1]</focusedcolor>
				<disabledcolor>$VAR[DisabledColor]</disabledcolor>
			</control>

			<!-- Default spincontrolex -->
			<control type="spincontrolex" id="9">
				<include>SettingsCategory_coords8</include>
				<font>Font33</font>
				<textcolor>$VAR[TextColor2]</textcolor>
				<focusedcolor>$VAR[TextColor1]</focusedcolor>
				<disabledcolor>$VAR[DisabledColor]</disabledcolor>
			</control>

			<!-- Default sliderex -->
			<control type="sliderex" id="13">
				<include>SettingsCategory_coords8</include>
				<font>Font33</font>
				<textcolor>$VAR[TextColor2]</textcolor>
				<focusedcolor>$VAR[TextColor1]</focusedcolor>
				<disabledcolor>$VAR[DisabledColor]</disabledcolor>
			</control>

			<!-- Default image -->
			<control type="image" id="11">
				<include>SettingsCategory_coords6</include>
				<texture border="2" colordiffuse="$VAR[DialogColor2]">common/Divider.png</texture>
			</control>

			<!-- Default edit -->
			<control type="edit" id="12">
				<include>SettingsCategory_coords6</include>
			</control>
			
		</control>

		<include>MaskingBars</include>

	</controls>

</window>
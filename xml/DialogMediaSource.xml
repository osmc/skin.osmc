<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- mediasource -->
	<defaultcontrol always="true">10</defaultcontrol>

	<controls>

		<!-- Dialog fanart -->
		<include>DialogFanart</include>

		<control type="group">
			<include>DialogDepth</include>

			<!-- Animation -->
			<include>DialogZoomAnimation</include>
			
			<!-- Heading -->
			<include content="Time">
				<param name="heading">$LOCALIZE[1021]</param>
			</include>

			<!-- Left grouplist -->
			<control type="grouplist" id="9000">
				<include>DialogMediaSource_coords1</include>
				<itemgap>0</itemgap>
				<onleft>noop</onleft>
				<onright>10</onright>
				<onup>noop</onup>
				<ondown>12</ondown>
				<orientation>vertical</orientation>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<!-- Browse -->
				<control type="button" id="11">
					<include>DialogMediaSource_coords2</include>
					<label>1024</label>
				</control>

				<!-- Add -->
				<control type="button" id="13">
					<include>DialogMediaSource_coords2</include>
					<label>15019</label>
				</control>

				<!-- Remove -->
				<control type="button" id="14">
					<include>DialogMediaSource_coords2</include>
					<label>1210</label>
				</control>

			</control>

			<!-- Right grouplist -->
			<control type="list" id="10">
				<include>DialogMediaSource_coords3</include>
				<onleft>9000</onleft>
				<onright>noop</onright>
				<onup>noop</onup>
				<ondown>12</ondown>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<include>DialogMediaSource_coords4</include>

				<include>DialogMediaSource_coords5</include>

			</control>

			<!-- Name -->
			<control type="edit" id="12">
				<include>DialogMediaSource_coords6</include>
				<onup>10</onup>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<ondown>9001</ondown>
				<font>Font48</font>
				<textoffsetx>20</textoffsetx>
				<texturefocus colordiffuse="$VAR[TextColorFO]" border="2">common/Border.png</texturefocus>
				<texturenofocus colordiffuse="$VAR[TextColorNF]" border="2">common/Border.png</texturenofocus>
			</control>

			<!-- Name Label -->
			<control type="label">
				<include>DialogMediaSource_coords7</include>
				<label>1022</label>
				<visible>Control.HasFocus(12)</visible>
			</control>
			<control type="label">
				<include>DialogMediaSource_coords7</include>
				<label>1022</label>
				<textcolor>$VAR[TextColorNF]</textcolor>
				<visible>!Control.HasFocus(12)</visible>
			</control>

			<!-- Button grouplist background -->
			<include content="dialogButtonBackground">
				<param name="id">9001</param>
			</include>

			<!-- Buttons -->
			<control type="grouplist" id="9001">
				<include>DialogButtons</include>
				<orientation>horizontal</orientation>
				<align>center</align>
				<itemgap>30</itemgap>
				<onup>12</onup>

				<!-- OK Button -->
				<control type="button" id="18">
					<width>auto</width>
					<label>186</label>
				</control>

				<!-- Cancel Button -->
				<control type="button" id="19">
					<width>auto</width>
					<label>222</label>
				</control>

			</control>

		</control>

		<include>MaskingBars</include>

	</controls>

</window>

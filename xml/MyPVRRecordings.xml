<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- pvrrecordings -->
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50</views>
	
	<!-- Textbox scroll reset -->
	<include>10701ResetScroll</include>

	<!-- Sub menu menucontrol -->
	<include condition="!Skin.HasSetting(KioskMode)">SubMenuMenucontrol</include>

	<controls>
	
		<control type="group">
			<include>WindowFullscreenDialogFadeAnimation</include>

			<!-- Background -->
			<include>WindowBackgroundImageVertical</include>
			
			<!-- Time -->
			<include>Time</include>

			<!-- Main group -->
			<control type="group">
				<include>WindowFadeAnimation</include>

				<!-- Skin helper image -->
				<control type="group">
					<visible>String.IsEmpty(Container(50).ListItem.Plot)</visible>
					<include>VisibleFadeAnimation</include>
					<control type="image">
						<include>MyPVRRecordings_coords1</include>
						<fadetime>200</fadetime>
						<texture background="true">$INFO[Window(Home).Property(SkinHelper.PVR.Poster)]</texture>
						<aspectratio align="center">keep</aspectratio>
						<visible>!String.IsEmpty(Window(Home).Property(SkinHelper.PVR.Poster))</visible>
					</control>
					<control type="image">
						<include>MyPVRRecordings_coords1</include>
						<fadetime>200</fadetime>
						<texture background="true">$INFO[Window(Home).Property(SkinHelper.PVR.Thumb)]</texture>
						<aspectratio align="center">keep</aspectratio>
						<visible>String.IsEmpty(Window(Home).Property(SkinHelper.PVR.Poster)) + !String.IsEmpty(Window(Home).Property(SkinHelper.PVR.Thumb))</visible>
					</control>
				</control>

				<!-- Episode Info -->
				<control type="group">
					<include>MyPVRRecordings_coords2</include>
					<visible>!String.IsEmpty(Container(50).ListItem.Plot) | String.IsEqual(Container(50).ListItem.Label,..)</visible>
					<include>VisibleFadeAnimation</include>

					<!-- Episode image -->
					<control type="image">
						<include>MyPVRRecordings_coords3</include>
						<fadetime>200</fadetime>
						<texture background="true" fallback="DefaultLiveTV.png">$INFO[ListItem.Icon]</texture>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<visible>Window.IsVisible(TVRecordings)</visible>
					</control>
					
					<control type="image">
						<include>MyPVRRecordings_coords3</include>
						<fadetime>200</fadetime>
						<texture background="true" fallback="DefaultRadio.png">$INFO[ListItem.Icon]</texture>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<visible>Window.IsVisible(RadioRecordings)</visible>
					</control>
					
					<!-- Episode Information -->
					<control type="group">
						<include>MyPVRRecordings_coords4</include>
						<control type="textbox">
							<include>MyPVRRecordings_coords5</include>
							<font>Font27</font>
							<align>left</align>
							<label>$VAR[PVRDescription]$INFO[Window(Home).Property(ResetScroll.10701)]</label>
							<textcolor>$VAR[TextColorFO]</textcolor>
							<autoscroll delay="5000" time="1400" repeat="10000">true</autoscroll>
							<visible>Skin.String(PlotFont,S)</visible>
						</control>
						<control type="textbox">
							<include>MyPVRRecordings_coords6</include>
							<font>Font30</font>
							<align>left</align>
							<label>$VAR[PVRDescription]$INFO[Window(Home).Property(ResetScroll.10701)]</label>
							<textcolor>$VAR[TextColorFO]</textcolor>
							<autoscroll delay="5000" time="1300" repeat="10000">true</autoscroll>
							<visible>Skin.String(PlotFont,M)</visible>
						</control>
						<control type="textbox">
							<include>MyPVRRecordings_coords7</include>
							<font>Font33</font>
							<align>left</align>
							<label>$VAR[PVRDescription]$INFO[Window(Home).Property(ResetScroll.10701)]</label>
							<textcolor>$VAR[TextColorFO]</textcolor>
							<autoscroll delay="5000" time="1200" repeat="10000">true</autoscroll>
							<visible>Skin.String(PlotFont,L)</visible>
						</control>
					</control>

				</control>

				<!-- List -->
				<control type="fixedlist" id="50">
					<include>MyPVRRecordings_coords8</include>
					<onup>51</onup>
					<ondown>51</ondown>
					<onleft>60</onleft>
					<pagecontrol>60</pagecontrol>
					<focusposition>3</focusposition>
					<orientation>vertical</orientation>
					<viewtype label="$LOCALIZE[535]">list</viewtype>
					<scrolltime tween="sine" easing="out">240</scrolltime>

					<include>MyPVRRecordings_coords9</include>

					<include>MyPVRRecordings_coords10</include>

				</control>

				<!-- Scrollbar (list) -->
				<control type="scrollbar" id="60">
					<include>MyPVRRecordings_coords11</include>
					<onleft condition="!Skin.HasSetting(KioskMode)">3001</onleft>
					<onright>50</onright>
					<showonepage>false</showonepage>
					<orientation>vertical</orientation>
					<colordiffuse>$VAR[OverlayColorNF]</colordiffuse>
					<include>BackgroundOverlayStyleScrollbarVertical</include>
					<texturesliderbarfocus border="0,5,0,5" colordiffuse="$VAR[OverlayColorFO]">common/ScrollbarGripFO.png</texturesliderbarfocus>
					<textureslidernib></textureslidernib>
					<textureslidernibfocus></textureslidernibfocus>
					<visible>!Skin.HasSetting(Scrollbars)</visible>
				</control>

				<!-- Recording count -->
				<control type="fadelabel">
					<include>MyPVRRecordings_coords12</include>
					<visible>!Skin.HasSetting(ItemCount)</visible>
					<align>right</align>
					<label>$INFO[Container(50).NumItems]$VAR[ContentType, ,]</label>
					<font>Font30</font>
					<textcolor>$VAR[TextColorNF]</textcolor>
					<animation effect="fade" start="100" end="0" time="200" condition="Integer.IsEqual(Container(50).NumItems,0) + Window.IsVisible(busydialog)">Conditional</animation>
				</control>
				
				<!-- Sub menu indicator -->
				<include>SubMenuIndicator</include>
				
				<!-- Sub menu -->
				<include>SubMenu</include>

			</control>

			<include>MaskingBars</include>
			
		</control>

	</controls>

</window>
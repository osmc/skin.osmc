<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Viewtype52">
		
		<!-- Wide -->
		<control type="group">
			<visible>Control.IsVisible(52)</visible>

			<!-- List -->
			<control type="fixedlist" id="52">
				<include>Viewtype52_coords1</include>
				<ondown>61</ondown>
				<onleft>52</onleft>
				<onright>52</onright>
				<pagecontrol>61</pagecontrol>
				<orientation>horizontal</orientation>
				<viewtype label="$LOCALIZE[31241]">bigwide</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons)</visible>

				<include>Viewtype52_coords2</include>

				<include>Viewtype52_coords3</include>

			</control>

			<control type="group">
				<include>Viewtype52_coords4</include>

				<!-- Title -->
				<control type="fadelabel">
					<include>Viewtype52_coords5</include>
					<font>Font72</font>
					<align>center</align>
					<textcolor>$VAR[TextColorFO]</textcolor>
					<label>$VAR[Label1]</label>
					<scrollspeed>120</scrollspeed>
				</control>

				<!-- Details -->
				<control type="fadelabel">
					<include>Viewtype52_coords6</include>
					<font>Font27</font>
					<align>center</align>
					<aligny>top</aligny>
					<label>$VAR[Label2]</label>
					<textcolor>$VAR[TextColorFO]</textcolor>
				</control>

			</control>

		</control>

	</include>

</includes>

<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- yesnodialog -->
	<defaultcontrol always="true">9001</defaultcontrol>
	<include>WindowFadeAnimation</include>
	
	<controls>

		<!-- Dialog fanart -->
		<include>DialogFanart</include>

		<control type="group">
			<include>DialogDepth</include>
		
			<!-- Animation -->
			<include>DialogZoomAnimation</include>
			
			<!-- Heading -->
			<include content="Time">
				<param name="heading">$INFO[Control.GetLabel(1)]</param>
			</include>

			<!-- Heading -->
			<control type="label" id="1">
				<left>-15000</left>
				<top>40</top>
				<width>600</width>
				<height>48</height>
				<align>center</align>
				<font>Font48</font>
				<textcolor>$VAR[TextColorFO]</textcolor>
			</control>

			<!-- Details -->
			<control type="textbox" id="9">
				<include>DialogConfirm_coords1</include>
				<align>center</align>
				<aligny>center</aligny>
				<font>Font36</font>
				<autoscroll delay="10000" time="1700" repeat="12000">True</autoscroll>
				<textcolor>$VAR[TextColorFO]</textcolor>
			</control>

			<!-- Progress -->
			<control type="progress" id="20">
				<description>Progressbar</description>
				<include>DialogConfirm_coords2</include>
				<texturebg>common/ScrollBackgroundHorizontal.png</texturebg>
				<midtexture colordiffuse="$VAR[OverlayColorFO]">common/ScrollbarGripHorizontalFO.png</midtexture>
				<info>System.Progressbar</info>
			</control>

			<!-- Button grouplist background -->
			<include content="dialogButtonBackground">
				<param name="id">9001</param>
			</include>

			<!-- Buttons -->
			<control type="grouplist" id="9001">
				<include>DialogButtons</include>
				<height>66</height>
				<orientation>horizontal</orientation>
				<align>center</align>
				<itemgap>30</itemgap>
				<control type="button" id="10">
					<width>auto</width>
					<font>Font36</font>
					<align>center</align>
				</control>
				<control type="button" id="11">
					<width>auto</width>
					<font>Font36</font>
					<align>center</align>
				</control>
				<control type="button" id="12">
					<width>auto</width>
					<font>Font36</font>
					<align>center</align>
				</control>
			</control>
			
		</control>

		<include>MaskingBars</include>

	</controls>

</window>
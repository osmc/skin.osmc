<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- addonsettings -->
	<defaultcontrol always="true">3</defaultcontrol>

	<controls>

		<!-- Dialog fanart -->
		<include>DialogFanart</include>

		<control type="group">
			<include>DialogDepth</include>

			<!-- Animation -->
			<include>DialogZoomAnimation</include>
			
			<!-- Heading -->
			<include content="Time">
				<param name="heading">$INFO[Window.Property(heading)]</param>
			</include>

			<!-- Left grouplist -->
			<control type="grouplist" id="3">
				<include>DialogAddonSettings_coords1</include>
				<itemgap>0</itemgap>
				<onleft>9001</onleft>
				<onright>5</onright>
				<onup>3</onup>
				<ondown>3</ondown>
				<orientation>vertical</orientation>
				<scrolltime tween="sine" easing="out">240</scrolltime>
			</control>

			<!-- Default button -->
			<control type="button" id="10">
				<include>DialogAddonSettings_coords2</include>
			</control>

			<!-- Right grouplist -->
			<control type="grouplist" id="5">
				<include>DialogAddonSettings_coords3</include>
				<itemgap>0</itemgap>
				<onleft>3</onleft>
				<onright>9001</onright>
				<onup>5</onup>
				<ondown>5</ondown>
				<orientation>vertical</orientation>
				<scrolltime tween="sine" easing="out">240</scrolltime>
			</control>

			<!-- Default button -->
			<control type="button" id="7">
				<include>DialogAddonSettings_coords4</include>
			</control>

			<!-- Default radiobutton -->
			<control type="radiobutton" id="8">
				<include>DialogAddonSettings_coords5</include>
			</control>

			<!-- Default spincontrolex -->
			<control type="spincontrolex" id="9">
				<include>DialogAddonSettings_coords5</include>
			</control>

			<!-- Default label -->
			<control type="label" id="14">
				<include>DialogAddonSettings_coords4</include>
				<label></label>
			</control>

			<!-- Default seperator -->
			<control type="image" id="11">
				<include>DialogAddonSettings_coords6</include>
				<texture border="1,12,1,1" colordiffuse="$VAR[DialogOverlayColorNF]">common/ScrollBackgroundHorizontal.png</texture>
			</control>
			
			<!-- Default edit -->
			<control type="label" id="12">
				<include>DialogAddonSettings_coords4</include>
				<label></label>
			</control>

			<!-- Default slider -->
			<control type="sliderex" id="13">
				<include>DialogAddonSettings_coords4</include>
			</control>

			<!-- Button grouplist background -->
			<include content="dialogButtonBackground">
				<param name="id">9001</param>
			</include>

			<!-- Buttons -->
			<control type="grouplist" id="9001">
				<include>DialogButtons</include>
				<orientation>horizontal</orientation>
				<align>center</align>
				<itemgap>30</itemgap>
				<onup>3</onup>
				<defaultcontrol>10</defaultcontrol>

				<!-- OK Button -->
				<control type="button" id="28">
					<width>auto</width>
					<label>186</label>
				</control>

				<!-- Cancel Button -->
				<control type="button" id="29">
					<width>auto</width>
					<label>222</label>
				</control>

				<!-- Defaults Button -->
				<control type="button" id="30">
					<width>auto</width>
					<label>409</label>
				</control>

			</control>
			
			<!-- Button grouplist indicator -->
			<include content="dialogButtonIndicator">
				<param name="visibility">!ControlGroup(9001).HasFocus + !Window.IsVisible(shutdownmenu)</param>
			</include>

		</control>

		<include>MaskingBars</include>

	</controls>

</window>

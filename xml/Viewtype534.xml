<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Viewtype534">
		
		<!-- Wall low -->
		<control type="group">
			<visible>Control.IsVisible(534)</visible>
			
			<!-- Thumbs -->
			<control type="panel" id="534">
				<include>Viewtype534_coords1</include>
				<onleft>64</onleft>
				<onup>534</onup>
				<ondown>534</ondown>
				<pagecontrol>64</pagecontrol>
				<preloaditems>4</preloaditems>
				<viewtype label="$LOCALIZE[31113]">icon</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons)</visible>

				<include>Viewtype534_coords2</include>

				<include>Viewtype534_coords3</include>
				
			</control>

			<control type="group">
				<include>Viewtype534_coords4</include>

				<!-- Title -->
				<control type="fadelabel">
					<include>Viewtype534_coords5</include>
					<font>Font42</font>
					<align>center</align>
					<textcolor>$VAR[TextColorFO]</textcolor>
					<label>$VAR[Label1]</label>
					<scrollspeed>120</scrollspeed>
				</control>

				<!-- Details -->
				<control type="fadelabel">
					<include>Viewtype534_coords6</include>
					<font>Font27</font>
					<align>center</align>
					<aligny>top</aligny>
					<label>$VAR[Label2]</label>
					<textcolor>$VAR[TextColorFO]</textcolor>
				</control>

			</control>

		</control>

	</include>

</includes>

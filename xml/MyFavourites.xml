<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- favourites browser -->
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50,523,535,537</views>
	
	<!-- Textbox scroll reset -->
	<include>MediaWindowResetScroll</include>
	
	<!-- Sub menu menucontrol -->
	<include condition="!Skin.HasSetting(KioskMode)">SubMenuMenucontrol</include>
	
	<controls>
	
		<control type="group">
			<include>WindowFullscreenDialogFadeAnimation</include>
		
			<!-- Window Background -->
			<include>WindowBackgroundImageMultiView</include>
			
			<!-- Time -->
			<include>Time</include>

			<!-- Main group -->
			<control type="group">
				<include>WindowFadeAnimation</include>

				<!-- Views -->
				<include>Viewtype50</include>
				<include>Viewtype523</include>
				<include>Viewtype535</include>
				<include>Viewtype537</include>

				<!-- Scrollbar (list/wall info) -->
				<control type="scrollbar" id="60">
					<include>MyFavourites_coords1</include>
					<onleft condition="!Skin.HasSetting(KioskMode)">3001</onleft>
					<onright>50</onright>
					<showonepage>false</showonepage>
					<orientation>vertical</orientation>
					<colordiffuse>$VAR[OverlayColorNF]</colordiffuse>
					<include>BackgroundOverlayStyleScrollbarVertical</include>
					<texturesliderbarfocus border="8,1,6,1" colordiffuse="$VAR[OverlayColorFO]">common/ScrollbarGripFO.png</texturesliderbarfocus>
					<textureslidernib></textureslidernib>
					<textureslidernibfocus></textureslidernibfocus>
					<visible>!Skin.HasSetting(Scrollbars) + Control.IsVisible(50)</visible>
				</control>
				
				<!-- Scrollbar (wide) -->
				<control type="scrollbar" id="61">
					<include>MyFavourites_coords2</include>
					<onup>50</onup>
					<ondown condition="!Skin.HasSetting(KioskMode)">3001</ondown>
					<showonepage>false</showonepage>
					<orientation>horizontal</orientation>
					<colordiffuse>$VAR[OverlayColorNF]</colordiffuse>
					<include>BackgroundOverlayStyleScrollbarHorizontal</include>
					<texturesliderbarfocus border="1,12,1,1" colordiffuse="$VAR[OverlayColorFO]">common/ScrollbarGripHorizontalFO.png</texturesliderbarfocus>
					<textureslidernib></textureslidernib>
					<textureslidernibfocus></textureslidernibfocus>
					<visible>!Skin.HasSetting(Scrollbars) + Control.IsVisible(523)</visible>
				</control>

				<!-- Scrollbar (wall) -->
				<control type="scrollbar" id="63">
					<include>MyFavourites_coords3</include>
					<onleft condition="!Skin.HasSetting(KioskMode)">3001</onleft>
					<onright>50</onright>
					<showonepage>false</showonepage>
					<orientation>vertical</orientation>
					<colordiffuse>$VAR[OverlayColorNF]</colordiffuse>
					<texturesliderbackground border="8,1,6,1">common/ScrollBackground.png</texturesliderbackground>
					<texturesliderbar border="8,1,6,1" colordiffuse="$VAR[OverlayColorNF]">common/ScrollbarGripNF.png</texturesliderbar>
					<texturesliderbarfocus border="8,1,6,1" colordiffuse="$VAR[OverlayColorFO]">common/ScrollbarGripFO.png</texturesliderbarfocus>
					<textureslidernib></textureslidernib>
					<textureslidernibfocus></textureslidernibfocus>
					<visible>!Skin.HasSetting(Scrollbars) + [Control.IsVisible(535) | Control.IsVisible(537)]</visible>
				</control>

				<!-- Media flags -->
				<include>MediaFlags</include>

				<!-- Item count -->
				<include>ItemCount</include>
				
				<!-- Sub menu indicator -->
				<include>SubMenuIndicator</include>
				
				<!-- Sub menu -->
				<include>SubMenu</include>
				
			</control>

			<include>MaskingBars</include>
			
		</control>

	</controls>

</window>
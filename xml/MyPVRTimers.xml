<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- pvrtimers -->
	<backgroundcolor>0</backgroundcolor>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50</views>
	
	<!-- Textbox scroll reset -->
	<include>ResetScroll</include>
	
	<!-- Sub menu menucontrol -->
	<include condition="!Skin.HasSetting(KioskMode)">SubMenuMenucontrol</include>
	
	<controls>

		<!-- Background -->
		<include>WindowBackgroundImageHorizontalLow1</include>
		
		<!-- Time -->
		<include>Time</include>

		<!-- Main group -->
		<control type="group">
			<include>WindowFadeAnimation</include>

			<!-- List -->
			<control type="list" id="50">
				<include>MyPVRTimers_coords1</include>
				<onup>50</onup>
				<ondown>50</ondown>
				<onleft condition="!Skin.HasSetting(KioskMode)">3001</onleft>
				<onright>70</onright>
				<pagecontrol>70</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="535">list</viewtype>				
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<include>MyPVRTimers_coords2</include>

				<include>MyPVRTimers_coords3</include>

			</control>

			<!-- Scrollbar -->
			<control type="scrollbar" id="70">
				<include>MyPVRTimers_coords4</include>
				<onleft>50</onleft>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<colordiffuse>$VAR[OverlayColorNF]</colordiffuse>
				<texturesliderbackground border="8,1,6,1">common/ScrollBackground.png</texturesliderbackground>
				<texturesliderbar border="8,1,6,1" colordiffuse="$VAR[OverlayColorNF]">common/ScrollbarGripNF.png</texturesliderbar>
				<texturesliderbarfocus border="8,1,6,1" colordiffuse="$VAR[OverlayColorFO]">common/ScrollbarGripFO.png</texturesliderbarfocus>
				<textureslidernib></textureslidernib>
				<textureslidernibfocus></textureslidernibfocus>
				<visible>!Skin.HasSetting(Scrollbars)</visible>
			</control>

			<!-- Timer count -->
			<control type="fadelabel">
				<include>MyPVRTimers_coords5</include>
				<align>right</align>
				<label>$INFO[Container(50).NumItems]$VAR[ContentType, ,]</label>
				<font>Font33</font>
				<textcolor>$VAR[TextColorNF]</textcolor>
				<animation effect="fade" start="100" end="0" time="200" condition="Integer.IsEqual(Container(50).NumItems,0) + Window.IsVisible(busydialog)">Conditional</animation>
			</control>
			
			<!-- Sub menu indicator -->
			<include>SubMenuIndicator</include>
			
			<!-- Sub menu -->
			<include>SubMenu</include>

		</control>

		<include>MaskingBars</include>

	</controls>

</window>
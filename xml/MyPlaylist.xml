<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- playlist -->
	<backgroundcolor>0</backgroundcolor>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50</views>

	<!-- Sidemenu menucontrol -->
	<include content="SidemenuMenucontrol">
		<param name="id">3001</param>
	</include>

	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<!-- Main group -->
		<control type="group">
			<include>WindowFadeAnimation</include>
			
			<include>Viewtype50</include>

			<!-- Scrollbar (list) -->
			<control type="scrollbar" id="60">
				<include>MyPlaylist_coords</include>
				<onleft condition="!Skin.HasSetting(KioskMode)">3001</onleft>
				<onright>50</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<colordiffuse>$VAR[OverlayColorNF]</colordiffuse>
				<texturesliderbackground border="9,1,6,1">common/ScrollBackground.png</texturesliderbackground>
				<texturesliderbar border="8,1,6,1">common/ScrollbarGripNF.png</texturesliderbar>
				<texturesliderbarfocus border="8,1,6,1" colordiffuse="$VAR[OverlayColorFO]">common/ScrollbarGripFO.png</texturesliderbarfocus>
				<textureslidernib></textureslidernib>
				<textureslidernibfocus></textureslidernibfocus>
				<visible>!Skin.HasSetting(Scrollbars) + Control.IsVisible(50)</visible>
			</control>
			
			<!-- Duration -->
			<control type="group">
				<include>MediaFlags_coords1</include>
				
				<control type="image">
					<include>MediaFlags_coords10</include>
					<colordiffuse>$VAR[TextColorNF]</colordiffuse>
					<texture>Duration.png</texture>
					<aspectratio align="left" aligny="bottom">keep</aspectratio>
					<visible>!String.IsEmpty(ListItem.Duration)</visible>
				</control>
				<control type="fadelabel">
					<include>MediaFlags_coords11</include>
					<label>$INFO[ListItem.Duration]$INFO[Container.Totaltime, / ,]</label>
					<font>Font30</font>
					<textcolor>$VAR[TextColorNF]</textcolor>
					<visible>!String.IsEmpty(ListItem.Duration)</visible>
				</control>
			</control>
			

			<!-- Item count -->
			<control type="fadelabel">
				<include>ItemCount_coords</include>
				<visible>!Skin.HasSetting(ItemCount)</visible>
				<label>$INFO[Container.NumItems]$VAR[ContentTypeMyPlaylist, ,]</label>
				<font>Font30</font>
				<textcolor>$VAR[TextColorNF]</textcolor>
				<align>right</align>
				<animation effect="fade" start="100" end="0" time="200" condition="Integer.IsEqual(Container.NumItems,0) + Window.IsVisible(busydialog)">Conditional</animation>
			</control>
			
			<!-- Submenu indicator -->
			<include>SubmenuIndicator</include>

		</control>

		<!-- Time -->
		<include>Time</include>

		<!-- Options -->
		<control type="group" id="9002">
			<include>NotificationDepth</include>
			<visible>!Skin.HasSetting(KioskMode)</visible>
			<control type="image">
				<include>FullscreenOverlayDimensions</include>
				<texture colordiffuse="$VAR[DarkenColor]">dialogs/DialogTextBackground.png</texture>
				<include>VisibleFadeAnimation</include>
				<visible>ControlGroup(9002).HasFocus</visible>
				<include>BackgroundDepth</include>
			</control>
			<control type="group">
				<left>-460</left>
				<top>0</top>
				<animation effect="slide" start="0,0" end="460,0" time="200" condition="ControlGroup(9002).HasFocus">Conditional</animation>
				<control type="button">
					<include>OptionsSideMenu1</include>
					<texturefocus>noop</texturefocus>
				</control>

				<control type="image">
					<include>OptionsSideMenu1</include>
					<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
				</control>

				<!-- Look controls -->
				<control type="grouplist" id="3001">
					<include>OptionsSideMenu3</include>
					<onleft>50</onleft>
					<onright>50</onright>
					<onback>50</onback>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<itemgap>0</itemgap>
					<defaultcontrol always="true">99</defaultcontrol>

					<include content="SideMenuAnimation">
						<param name="containerID">3001</param>
					</include>

					<!-- Sort by -->
					<control type="button" id="3">
						<height>52</height>
						<label>103</label>
						<visible>Control.IsEnabled(3)</visible>
					</control>
					<!-- Sort ascending/descending -->
					<control type="togglebutton" id="4">
						<height>52</height>
						<label>$LOCALIZE[31234] $LOCALIZE[584]</label>
						<altlabel>$LOCALIZE[31234] $LOCALIZE[585]</altlabel>
						<usealttexture>Container.SortDirection(Descending)</usealttexture>
						<visible>Control.IsEnabled(4)</visible>
					</control>
					<!-- Filter -->
					<control type="edit" id="19">
						<height>52</height>
						<label>587</label>
						<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
					</control>
					<!-- Filter -->
					<control type="radiobutton" id="93">
						<height>52</height>
						<label>587</label>
						<onclick>right</onclick>
						<onclick>Filter</onclick>
						<selected>Container.Filtered</selected>
						<visible>Container.CanFilterAdvanced</visible>
					</control>

					<control type="image" id="80">
						<left>0</left>
						<top>0</top>
						<width>410</width>
						<height>10</height>
						<texture>transparent.png</texture>
					</control>


					<!-- Shuffle -->
					<control type="radiobutton" id="20">
						<height>52</height>
						<label>191</label>
						<visible>Control.IsEnabled(20)</visible>
					</control>
					<!-- Repeat -->
					<control type="button" id="26">
						<height>52</height>
						<label></label>
						<visible>Control.IsEnabled(26)</visible>
					</control>
					<!-- Save -->
					<control type="button" id="21">
						<height>52</height>
						<label>190</label>
						<visible>Control.IsEnabled(21)</visible>
					</control>
					<!-- Clear -->
					<control type="button" id="22">
						<height>52</height>
						<label>192</label>
						<onclick>ReplaceWindow(10502)</onclick>
						<visible>Control.IsEnabled(22)</visible>
					</control>
					
					<include>SideMenuControls</include>
					
				</control>
			</control>
		</control>

		<!-- Options -->
		<control type="group">
			<include>OptionsAnimation</include>
			<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus() | ControlGroup(4000).HasFocus() | ControlGroup(5000).HasFocus()</visible>

			<!-- Background -->
			<include>OptionsBackgroundImage</include>

			<!-- Main group -->
			<control type="group">
				<left>85</left>
				<top>297</top>

				<!-- Scroll -->
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>72</width>
					<height>20</height>
					<texture border="1,12,1,1" colordiffuse="$VAR[OverlayColorNF]">common/ScrollBackgroundHorizontal.png</texture>
				</control>
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>24</width>
					<height>20</height>
					<texture border="1,12,1,1" colordiffuse="$VAR[OverlayColorFO]">common/ScrollbarGripHorizontalFO.png</texture>
					<animation effect="slide" start="0" end="24" time="200" condition="ControlGroup(4000).HasFocus()">Conditional</animation>
					<animation effect="slide" start="0" end="48" time="200" condition="ControlGroup(5000).HasFocus()">Conditional</animation>
				</control>

				<!-- Heading -->
				<control type="label">
					<animation effect="fade" start="0" end="100" time="200">Visible</animation>
					<left>0</left>
					<top>34</top>
					<width>1200</width>
					<height>72</height>
					<label>$VAR[CustomMenuHeading]</label>
					<font>Font72</font>
					<textcolor>$VAR[TextColorFO]</textcolor>
				</control>

				<!-- Look controls -->
				<control type="grouplist" id="3000">
					<left>0</left>
					<top>130</top>
					<width>1200</width>
					<height>600</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>50</onleft>
					<onright>4001</onright>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">3001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="3001">
						<width>0</width>
						<height>-8</height>
						<label></label>
						<onfocus>Down</onfocus>
					</control>
					
				</control>

				<!-- Layout controls -->
				<control type="grouplist" id="4000">
					<left>0</left>
					<top>130</top>
					<width>1200</width>
					<height>600</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft condition="!Skin.HasSetting(KioskMode)">3001</onleft>
					<onright>5001</onright>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">4001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(4000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="4001">
						<width>0</width>
						<height>-8</height>
						<label></label>
						<onfocus>Down</onfocus>
					</control>

				</control>

				<!-- More controls -->
				<control type="grouplist" id="5000">
					<left>0</left>
					<top>130</top>
					<width>1200</width>
					<height>600</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>4001</onleft>
					<onright>50</onright>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">5001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(5000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="5001">
						<width>0</width>
						<height>-8</height>
						<label></label>
						<onfocus>Down</onfocus>
					</control>

				</control>

			</control>

		</control>

		<include>MaskingBars</include>

	</controls>

</window>
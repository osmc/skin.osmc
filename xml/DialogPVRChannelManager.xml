<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- pvrchannelmanager -->
	<defaultcontrol always="true">20</defaultcontrol>

	<controls>

		<!-- Dialog fanart -->
		<include>DialogFanart</include>

		<control type="group">
			<include>DialogDepth</include>

			<!-- Animation -->
			<include>DialogZoomAnimation</include>
			
			<!-- Heading -->
			<include content="Time">
				<param name="heading">$LOCALIZE[19199]</param>
			</include>

			<!-- Left list -->			
			<control type="list" id="20">
				<include>DialogPVRChannelManager_coords1</include>
				<onup>20</onup>
				<ondown>20</ondown>
				<onleft>70</onleft>
				<onright>9000</onright>
				<pagecontrol>70</pagecontrol>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<include>DialogPVRChannelManager_coords2</include>

				<include>DialogPVRChannelManager_coords3</include>

			</control>
			
			<!-- Scrollbar (left list) -->
			<control type="scrollbar" id="70">
				<include>DialogPVRChannelManager_coords4</include>
				<onright>20</onright>
				<onleft>9001</onleft>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<colordiffuse>$VAR[OverlayColorNF]</colordiffuse>
				<texturesliderbackground border="9,1,6,1">common/ScrollBackground.png</texturesliderbackground>
				<texturesliderbar border="8,1,6,1">common/ScrollbarGripNF.png</texturesliderbar>
				<texturesliderbarfocus border="8,1,6,1" colordiffuse="$VAR[OverlayColorFO]">common/ScrollbarGripFO.png</texturesliderbarfocus>
				<textureslidernib></textureslidernib>
				<textureslidernibfocus></textureslidernibfocus>
				<visible>!Skin.HasSetting(Scrollbars)</visible>
			</control>

			<!-- Right list -->
			<control type="grouplist" id="9000">
				<include>DialogPVRChannelManager_coords5</include>
				<itemgap>0</itemgap>
				<onleft>20</onleft>
				<onright>9001</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<orientation>vertical</orientation>
				<usecontrolcoords>true</usecontrolcoords>

				<!-- Channel options header -->
				<control type="label" id="100">
					<include>DialogPVRChannelManager_coords6</include>
					<label>$LOCALIZE[19029] $LOCALIZE[33063]</label>
					<align>center</align>
					<textcolor>$VAR[TextColorNF]</textcolor>
				</control>

				<!-- Channel activated -->
				<control type="radiobutton" id="7">
					<include>DialogPVRChannelManager_coords7</include>
					<label>19074</label>
				</control>

				<!-- Channel name -->
				<control type="edit" id="8">
					<include>DialogPVRChannelManager_coords8</include>
					<label>19201</label>
				</control>

				<!-- Channel logo button -->
				<control type="button" id="9">
					<include>DialogPVRChannelManager_coords7</include>
					<label>19202</label>
				</control>

				<!-- Current channel logo -->
				<control type="image" id="10">
					<include>DialogPVRChannelManager_coords9</include>
					<texture>$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
				</control>

				<!-- EPG activated -->
				<control type="radiobutton" id="12">
					<include>DialogPVRChannelManager_coords7</include>
					<label>19074</label>
				</control>

				<!-- EPG source -->
				<control type="spincontrolex" id="13">
					<include>DialogPVRChannelManager_coords8</include>
					<label>19200</label>
				</control>

				<!-- Parental locked -->
				<control type="radiobutton" id="14">
					<include>DialogPVRChannelManager_coords7</include>
					<label>19267</label>
				</control>

			</control>

			<!-- Button grouplist background -->
			<include content="dialogButtonBackground">
				<param name="id">9001</param>
			</include>

			<!-- Buttons -->
			<control type="grouplist" id="9001">
				<include>DialogButtons</include>
				<orientation>horizontal</orientation>
				<align>center</align>
				<itemgap>30</itemgap>
				<onup>9000</onup>
				<defaultcontrol>4</defaultcontrol>

				<!-- OK Button -->
				<control type="button" id="4">
					<width>auto</width>
					<label>186</label>
				</control>

				<!-- Cancel Button -->
				<control type="button" id="6">
					<width>auto</width>
					<label>222</label>
				</control>

				<!-- Apply changes Button -->
				<control type="button" id="5">
					<width>auto</width>
					<label>14070</label>
				</control>

				<!-- TV/Radio Button -->
				<control type="togglebutton" id="34">
					<width>auto</width>
					<label>19024</label>
					<altlabel>19023</altlabel>
					<usealttexture>!String.IsEmpty(Window.Property(IsRadio))</usealttexture>
				</control>

				<!-- Group Manager Button -->
				<control type="button" id="30">
					<width>auto</width>
					<label>19205</label>
				</control>

			</control>
			
			<!-- Button grouplist indicator -->
			<include content="dialogButtonIndicator">
				<param name="visibility">!ControlGroup(9001).HasFocus + !Window.IsVisible(shutdownmenu)</param>
			</include>

		</control>

		<include>MaskingBars</include>

	</controls>

</window>
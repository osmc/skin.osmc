<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1101">
	<!-- Welcome -->
	<defaultcontrol always="true">9001</defaultcontrol>

	<controls>

		<!-- Dialog fanart -->
		<include>DialogFanart</include>
		
		<control type="group">

			<!-- Animation -->
			<include>DialogZoomAnimation</include>
		
			<!-- Heading -->
			<include content="Time">
				<param name="heading">$LOCALIZE[31169]</param>
			</include>

			<!-- Heading -->
			<control type="label" id="1">
				<left>-15000</left>
				<top>40</top>
				<width>600</width>
				<height>48</height>
				<align>center</align>
				<font>Font48</font>
				<textcolor>$VAR[TextColorFO]</textcolor>
			</control>

			<!-- Details -->
			<control type="textbox" id="9">
				<include>Custom_Welcome_coords</include>
				<align>center</align>
				<aligny>center</aligny>
				<font>Font36</font>
				<autoscroll delay="10000" time="1700" repeat="12000">True</autoscroll>
				<textcolor>$VAR[TextColorFO]</textcolor>
				<label>$LOCALIZE[31155]</label>
			</control>

			<!-- Button grouplist background -->
			<include content="dialogButtonBackground">
				<param name="id">9001</param>
			</include>

			<!-- Buttons -->
			<control type="grouplist" id="9001">
				<include>DialogButtons</include>
				<orientation>horizontal</orientation>
				<align>center</align>
				<itemgap>30</itemgap>
				<control type="button">
					<width>auto</width>
					<font>Font36</font>
					<align>center</align>
					<onclick>Dialog.Close(1101)</onclick>
					<onclick>Skin.SetString(WelcomeDialogShown,true)</onclick>
					<label>$LOCALIZE[31151]</label>
				</control>
			</control>
			
		</control>

		<include>MaskingBars</include>

	</controls>

</window>

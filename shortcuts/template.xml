<template>

	<other include="weatherBackground">
		<condition tag="property" attribute="name|widget">WeatherWidget</condition>

		<propertyGroup>mainmenuWidgets</propertyGroup>
		<controls>
			<description>Multi-image background for weather widgets</description>
			<control type="multiimage">
				<include>FullscreenDimensions</include>
				<include>VisibleFadeAnimation</include>
				<fadetime>400</fadetime>
				<imagepath>$INFO[Skin.String(weatherFanart.path)]$INFO[Container(800$SKINSHORTCUTS[id]).ListItem.Property(weatherFanart)]/</imagepath>
				<timeperimage>10000</timeperimage>
				<randomize>true</randomize>
				<animation effect="fade" start="100" end="0" condition="[Player.HasVideo + Skin.HasSetting(BackgroundVideo)] | [Player.HasAudio + Skin.HasSetting(BackgroundVisualisation) + !String.Contains(Window(Videos).Property(TvTunesIsAlive),True)]">Conditional</animation>
				<animation effect="fade" start="70" end="70" condition="![Player.HasVideo + Skin.HasSetting(BackgroundVideo)] | [Player.HasAudio + Skin.HasSetting(BackgroundVisualisation) + !String.Contains(Window(Videos).Property(TvTunesIsAlive),True)]">Conditional</animation>
				<visible>!Skin.HasSetting(widgetFanart)</visible>
				<visible>StringCompare(Container(9000).ListItem.Property(submenuVisibility),$SKINSHORTCUTS[submenuVisibility]) + [Control.HasFocus(800$SKINSHORTCUTS[id]) | String.IsEqual(Skin.String(menuStyle),lumos)] + Skin.HasSetting(weatherFanart.multi)</visible>
			</control>
		</controls>
	</other>



	<other include="vertical">
		<!-- Weather widget, Vertical home -->
		<condition tag="property" attribute="name|widget">WeatherWidget</condition>
		
		<propertyGroup>mainmenuWidgets</propertyGroup>

		<controls>
			<control type="list" id="800$SKINSHORTCUTS[id]">
				<left>2605</left>
				<top>390</top>
				<width>1218</width>
				<height>306</height>

				<onleft>9000</onleft>
				<onback>9000</onback>
				<onright>noop</onright>
				<viewtype label="">list</viewtype>
				<orientation>horizontal</orientation>
				<defaultcontrol always="true">0</defaultcontrol>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<skinshortcuts>visibility</skinshortcuts>

				<animation effect="slide" start="0,0" end="-1000,0" time="0" condition="StringCompare(Container(800$SKINSHORTCUTS[id]).NumItems,1)">conditional</animation>
				<animation effect="slide" start="0,0" end="-1203,0" time="0" condition="StringCompare(Container(800$SKINSHORTCUTS[id]).NumItems,2)">conditional</animation>
				<animation effect="slide" start="0,0" end="-1406,0" time="0" condition="StringCompare(Container(800$SKINSHORTCUTS[id]).NumItems,3)">conditional</animation>
				<animation effect="slide" start="0,0" end="-1609,0" time="0" condition="StringCompare(Container(800$SKINSHORTCUTS[id]).NumItems,4)">conditional</animation>
				<animation effect="slide" start="0,0" end="-1812,0" time="0" condition="StringCompare(Container(800$SKINSHORTCUTS[id]).NumItems,5)">conditional</animation>
				<animation effect="slide" start="0,0" end="-2015,0" time="0" condition="IntegerGreaterThan(Container(800$SKINSHORTCUTS[id]).NumItems,5)">conditional</animation>

				<animation type="visible">
					<effect type="fade" start="0" end="100" time="200" delay="100" />
					<effect type="slide" start="600,0" end="0,0" time="200" delay="100" />
				</animation>
				<animation type="hidden">
					<effect type="fade" start="100" end="0" time="200" />
					<effect type="slide" start="0,0" end="600,0" time="200" />
				</animation>

				<itemlayout width="203" height="306">
					<control type="group">
						<control type="label">
							<top>2</top>
							<width>203</width>
							<height>33</height>
							<font>Font33</font>
							<align>center</align>
							<textcolor>TextColor2</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="image">
							<left>13</left>
							<top>0</top>
							<width>183</width>
							<height>306</height>
							<texture colordiffuse="DiffusePosterNF" background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio align="center">keep</aspectratio>
							<visible>!Skin.HasSetting(weatherIcons.multi)</visible>
						</control>
						<control type="multiimage">
							<left>13</left>
							<top>0</top>
							<width>183</width>
							<height>306</height>
							<imagepath>$INFO[ListItem.Property(weatherIconMulti)]</imagepath>
							<colordiffuse>DiffusePosterNF</colordiffuse>
							<timeperimage>200</timeperimage>
							<aspectratio align="center">keep</aspectratio>
							<visible>Skin.HasSetting(weatherIcons.multi)</visible>
						</control>
						<control type="label">
							<top>249</top>
							<width>203</width>
							<height>25</height>
							<font>Font25</font>
							<align>center</align>
							<textcolor>TextColor2</textcolor>
							<label>$INFO[ListItem.Label2]</label>
						</control>
					</control>
				</itemlayout>

				<focusedlayout width="203" height="306">
					<control type="group">
						<control type="label">
							<top>2</top>
							<width>203</width>
							<height>33</height>
							<font>Font33</font>
							<align>center</align>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>TextColor2</textcolor>
						</control>
						<control type="image">
							<left>13</left>
							<top>0</top>
							<width>183</width>
							<height>306</height>
							<texture colordiffuse="DiffusePosterNF" background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio align="center">keep</aspectratio>
							<visible>!Control.HasFocus(800$SKINSHORTCUTS[id])</visible>
							<visible>!Skin.HasSetting(weatherIcons.multi)</visible>
						</control>
						<control type="image">
							<left>13</left>
							<top>0</top>
							<width>183</width>
							<height>306</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio align="center">keep</aspectratio>
							<visible>Control.HasFocus(800$SKINSHORTCUTS[id])</visible>
							<visible>!Skin.HasSetting(weatherIcons.multi)</visible>
						</control>
						<control type="multiimage">
							<left>13</left>
							<top>0</top>
							<width>183</width>
							<height>306</height>
							<imagepath>$INFO[ListItem.Property(weatherIconMulti)]</imagepath>
							<colordiffuse>DiffusePosterNF</colordiffuse>
							<timeperimage>200</timeperimage>
							<aspectratio align="center">keep</aspectratio>
							<visible>!Control.HasFocus(800$SKINSHORTCUTS[id])</visible>
							<visible>Skin.HasSetting(weatherIcons.multi)</visible>
						</control>
						<control type="multiimage">
							<left>13</left>
							<top>0</top>
							<width>183</width>
							<height>306</height>
							<imagepath>$INFO[ListItem.Property(weatherIconMulti)]</imagepath>
							<timeperimage>200</timeperimage>
							<aspectratio align="center">keep</aspectratio>
							<visible>Control.HasFocus(800$SKINSHORTCUTS[id])</visible>
							<visible>Skin.HasSetting(weatherIcons.multi)</visible>
						</control>
						<control type="label">
							<top>249</top>
							<width>203</width>
							<height>25</height>
							<font>Font25</font>
							<align>center</align>
							<textcolor>TextColor2</textcolor>
							<label>$INFO[ListItem.Label2]</label>
						</control>
					</control>
				</focusedlayout>

				<content target="$SKINSHORTCUTS[target]">$SKINSHORTCUTS[path]$PYTHON['&amp;' if path in '?' else '?']igconq=$INFO[Window.Property(refresh800$SKINSHORTCUTS[id])]</content>
			</control>

			<control type="grouplist">
				<skinshortcuts>visibility</skinshortcuts>
				<visible>Control.HasFocus(9002) | !Skin.HasSetting(HideSubmenuHeading)</visible>
				<visible>StringCompare(Window.Property($SKINSHORTCUTS[labelID]-widget),1) | IsEmpty(Window.Property($SKINSHORTCUTS[labelID]-widget))</visible>
				<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
				<animation effect="fade" start="0" end="100" time="200" delay="100">Visible</animation>

				<top>1005</top>
				<right>120</right>
				<width>1000</width>
				<height>33</height>
				<align>right</align>
				<aligny>center</aligny>
				<orientation>horizontal</orientation>
				<itemgap>10</itemgap>

				<control type="image">
					<width>33</width>
					<height>33</height>
					<texture>busy.gif</texture>
					<visible>Container(9002).IsUpdating</visible>
				</control>

				<control type="label">
					<minwidth>10</minwidth>
					<maxwidth>950</maxwidth>
					<width>auto</width>
					<height>33</height>
					<font>Font33</font>
					<textcolor>TextColor2</textcolor>
					<label>$SKINSHORTCUTS[name]</label>
				</control>
			</control>
		</controls>

		<variables>
			<variable name="myvariable">
				<value condition="$SKINSHORTCUTS[name]">Help</value>
			</variable>
		</variables>
	</other>

	<other include="vertical">
		<!-- Non-weather widget, Vertical home -->
		<condition tag="property" attribute="name|widgetPath" />
		
		<propertyGroup>mainmenuWidgets</propertyGroup>
		<propertyGroup>lumosLayout</propertyGroup>

		<controls>
			<control type="list" id="800$SKINSHORTCUTS[id]">
				<left>$SKINSHORTCUTS[containerLeft]</left>
				<top>$SKINSHORTCUTS[containerTop]</top>
				<width>$SKINSHORTCUTS[containerWidth]</width>
				<height>$SKINSHORTCUTS[layoutHeight]</height>

				<onleft>9000</onleft>
				<onback>9000</onback>
				<onright>noop</onright>
				<viewtype label="">list</viewtype>
				<orientation>horizontal</orientation>
				<defaultcontrol always="true">0</defaultcontrol>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<skinshortcuts>visibility</skinshortcuts>

				<!-- Layout slide -->
				<animation effect="slide" start="0,0" end="-1000,0" time="0" condition="$PYTHON['True' if layout != 'wide' else 'False'] + StringCompare(Container(800$SKINSHORTCUTS[id]).NumItems,1)">conditional</animation>
				<animation effect="slide" start="0,0" end="-1203,0" time="0" condition="$PYTHON['True' if layout != 'wide' else 'False'] + StringCompare(Container(800$SKINSHORTCUTS[id]).NumItems,2)">conditional</animation>
				<animation effect="slide" start="0,0" end="-1406,0" time="0" condition="$PYTHON['True' if layout != 'wide' else 'False'] + StringCompare(Container(800$SKINSHORTCUTS[id]).NumItems,3)">conditional</animation>
				<animation effect="slide" start="0,0" end="-1609,0" time="0" condition="$PYTHON['True' if layout != 'wide' else 'False'] + StringCompare(Container(800$SKINSHORTCUTS[id]).NumItems,4)">conditional</animation>
				<animation effect="slide" start="0,0" end="-1812,0" time="0" condition="$PYTHON['True' if layout != 'wide' else 'False'] + StringCompare(Container(800$SKINSHORTCUTS[id]).NumItems,5)">conditional</animation>
				<animation effect="slide" start="0,0" end="-2015,0" time="0" condition="$PYTHON['True' if layout != 'wide' else 'False'] + IntegerGreaterThan(Container(800$SKINSHORTCUTS[id]).NumItems,5)">conditional</animation>

				<!-- Wide layout slide -->
				<animation effect="slide" start="0,0" end="-1325,0" time="0" condition="$PYTHON['True' if layout == 'wide' else 'False'] + StringCompare(Container(800$SKINSHORTCUTS[id]).NumItems,1)">conditional</animation>
				<animation effect="slide" start="0,0" end="-1670,0" time="0" condition="$PYTHON['True' if layout == 'wide' else 'False'] + StringCompare(Container(800$SKINSHORTCUTS[id]).NumItems,2)">conditional</animation>
				<animation effect="slide" start="0,0" end="-2015,0" time="0" condition="$PYTHON['True' if layout == 'wide' else 'False'] + IntegerGreaterThan(Container(800$SKINSHORTCUTS[id]).NumItems,2)">conditional</animation>

				<animation type="visible">
					<effect type="fade" start="0" end="100" time="200" delay="100" />
					<effect type="slide" start="600,0" end="0,0" time="200" delay="100" />
				</animation>
				<animation type="hidden">
					<effect type="fade" start="100" end="0" time="200" />
					<effect type="slide" start="0,0" end="600,0" time="200" />
				</animation>

				<itemlayout width="$SKINSHORTCUTS[layoutWidth]" height="$SKINSHORTCUTS[layoutHeight]">
					<include content="$PYTHON[$SKINSHORTCUTS[primary-art]]">
						<description>Primary art</description>
						<param name="width">$SKINSHORTCUTS[imageWidth]</param>
						<param name="height">$SKINSHORTCUTS[imageHeight]</param>
						<param name="colordiffuse">DiffusePosterNF</param>
						<param name="fallback"></param>
						<param name="art">$INFO[ListItem.$SKINSHORTCUTS[art]]</param>
						<param name="aspectratio">keep</param>
						<param name="shadow">$SKINSHORTCUTS[shadow]</param>
						<param name="visible"></param>
					</include>
					<include content="$PYTHON[$SKINSHORTCUTS[secondary-art]]">
						<description>Fallback art</description>
						<param name="width">$SKINSHORTCUTS[imageWidth]</param>
						<param name="height">$SKINSHORTCUTS[imageHeight]</param>
						<param name="colordiffuse">DiffusePosterNF</param>
						<param name="fallback"></param>
						<param name="art">$INFO[ListItem.$SKINSHORTCUTS[art2]]</param>
						<param name="aspectratio">keep</param>
						<param name="shadow">$SKINSHORTCUTS[shadow]</param>
						<param name="visible">$PYTHON[$SKINSHORTCUTS[secondary-visibility]]</param>
					</include>
					<include content="widget-image">
						<description>Catch-all art</description>
						<param name="width">$SKINSHORTCUTS[imageWidth]</param>
						<param name="height">$SKINSHORTCUTS[imageHeight]</param>
						<param name="colordiffuse">DiffusePosterNF</param>
						<param name="fallback">DefaultShortcut.png</param>
						<param name="art">$INFO[ListItem.Icon]</param>
						<param name="aspectratio">keep</param>
						<param name="shadow">$SKINSHORTCUTS[shadow]</param>
						<param name="visible">[ $PYTHON[$SKINSHORTCUTS[secondary-visibility]] ] + [ $PYTHON[$SKINSHORTCUTS[fallback-visibility]] ]</param>
					</include>

					<control type="image">
						<left>$PYTHON[int(imageWidth) - 45]</left>
						<top>$PYTHON[int(imageHeight) - 50]</top>
						<width>35</width>
						<height>49</height>
						<texture>$VAR[StatusOverlayWide]</texture>
						<visible>!Skin.HasSetting(widgetIcons)</visible>
					</control>
				</itemlayout>

				<focusedlayout width="$SKINSHORTCUTS[layoutWidth]" height="$SKINSHORTCUTS[layoutHeight]">
						<control type="group">
							<include content="$PYTHON[$SKINSHORTCUTS[primary-art]]">
								<description>Primary art</description>
								<param name="width">$SKINSHORTCUTS[imageWidth]</param>
								<param name="height">$SKINSHORTCUTS[imageHeight]</param>
								<param name="fallback"></param>
								<param name="art">$INFO[ListItem.$SKINSHORTCUTS[art]]</param>
								<param name="aspectratio">keep</param>
								<param name="shadow">$SKINSHORTCUTS[shadow]</param>
								<param name="visible"></param>
							</include>
							<include content="$PYTHON[$SKINSHORTCUTS[secondary-art]]">
								<description>Fallback art</description>
								<param name="width">$SKINSHORTCUTS[imageWidth]</param>
								<param name="height">$SKINSHORTCUTS[imageHeight]</param>
								<param name="fallback"></param>
								<param name="art">$INFO[ListItem.$SKINSHORTCUTS[art2]]</param>
								<param name="aspectratio">keep</param>
								<param name="shadow">$SKINSHORTCUTS[shadow]</param>
								<param name="visible">$PYTHON[$SKINSHORTCUTS[secondary-visibility]]</param>
							</include>
							<include content="widget-image">
								<description>Catch-all art</description>
								<param name="width">$SKINSHORTCUTS[imageWidth]</param>
								<param name="height">$SKINSHORTCUTS[imageHeight]</param>
								<param name="fallback">DefaultShortcut.png</param>
								<param name="art">$INFO[ListItem.Icon]</param>
								<param name="aspectratio">keep</param>
								<param name="shadow">$SKINSHORTCUTS[shadow]</param>
								<param name="visible">[ $PYTHON[$SKINSHORTCUTS[secondary-visibility]] ] + [ $PYTHON[$SKINSHORTCUTS[fallback-visibility]] ]</param>
							</include>
							<visible>Control.HasFocus(800$SKINSHORTCUTS[id])</visible>
						</control>
						<control type="group">
							<include content="$PYTHON[$SKINSHORTCUTS[primary-art]]">
								<description>Primary art</description>
								<param name="width">$SKINSHORTCUTS[imageWidth]</param>
								<param name="height">$SKINSHORTCUTS[imageHeight]</param>
								<param name="colordiffuse">DiffusePosterNF</param>
								<param name="fallback"></param>
								<param name="art">$INFO[ListItem.$SKINSHORTCUTS[art]]</param>
								<param name="aspectratio">keep</param>
								<param name="shadow">$SKINSHORTCUTS[shadow]</param>
								<param name="visible"></param>
							</include>
							<include content="$PYTHON[$SKINSHORTCUTS[secondary-art]]">
								<description>Fallback art</description>
								<param name="width">$SKINSHORTCUTS[imageWidth]</param>
								<param name="height">$SKINSHORTCUTS[imageHeight]</param>
								<param name="colordiffuse">DiffusePosterNF</param>
								<param name="fallback"></param>
								<param name="art">$INFO[ListItem.$SKINSHORTCUTS[art2]]</param>
								<param name="aspectratio">keep</param>
								<param name="shadow">$SKINSHORTCUTS[shadow]</param>
								<param name="visible">$PYTHON[$SKINSHORTCUTS[secondary-visibility]]</param>
							</include>
							<include content="widget-image">
								<description>Catch-all art</description>
								<param name="width">$SKINSHORTCUTS[imageWidth]</param>
								<param name="height">$SKINSHORTCUTS[imageHeight]</param>
								<param name="colordiffuse">DiffusePosterNF</param>
								<param name="fallback">DefaultShortcut.png</param>
								<param name="art">$INFO[ListItem.Icon]</param>
								<param name="aspectratio">keep</param>
								<param name="shadow">$SKINSHORTCUTS[shadow]</param>
								<param name="visible">[ $PYTHON[$SKINSHORTCUTS[secondary-visibility]] ] + [ $PYTHON[$SKINSHORTCUTS[fallback-visibility]] ]</param>
							</include>
							<visible>!Control.HasFocus(800$SKINSHORTCUTS[id])</visible>
						</control>
						<control type="image">
							<left>$PYTHON[int(imageWidth) - 45]</left>
							<top>$PYTHON[int(imageHeight) - 50]</top>
							<width>35</width>
							<height>49</height>
							<texture>$VAR[StatusOverlayWide]</texture>
							<visible>!Skin.HasSetting(widgetIcons)</visible>
						</control>
				</focusedlayout>

				<content target="$SKINSHORTCUTS[target]">$SKINSHORTCUTS[path]</content>
			</control>

			<control type="grouplist">
				<skinshortcuts>visibility</skinshortcuts>
				<visible>Control.HasFocus(9002) | !Skin.HasSetting(HideSubmenuHeading)</visible>
				<visible>StringCompare(Window.Property($SKINSHORTCUTS[labelID]-widget),1) | IsEmpty(Window.Property($SKINSHORTCUTS[labelID]-widget))</visible>
				<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
				<animation effect="fade" start="0" end="100" time="200" delay="100">Visible</animation>

				<top>1005</top>
				<right>120</right>
				<width>1000</width>
				<height>33</height>
				<align>right</align>
				<aligny>center</aligny>
				<orientation>horizontal</orientation>
				<itemgap>10</itemgap>

				<control type="image">
					<width>33</width>
					<height>33</height>
					<texture>busy.gif</texture>
					<visible>Container(9002).IsUpdating</visible>
				</control>

				<control type="label">
					<minwidth>10</minwidth>
					<maxwidth>950</maxwidth>
					<width>auto</width>
					<height>33</height>
					<font>Font33</font>
					<textcolor>TextColor2</textcolor>
					<label>$SKINSHORTCUTS[name]</label>
				</control>
			</control>
		</controls>

		<variables>
			<variable name="myvariable">
				<value condition="$SKINSHORTCUTS[name]">Help</value>
			</variable>
		</variables>
	</other>



	<other include="reloading">
		<property name="id" tag="mainmenuid" />
		<controls>
			<control type="image">
				<width>36</width>
				<height>36</height>
				<texture>busy-small.gif</texture>
				<skinshortcuts>visibility</skinshortcuts>
				<visible>Container(800$SKINSHORTCUTS[id]).IsUpdating</visible>
			</control>
		</controls>
	</other>



	<propertyGroup name="mainmenuWidgets">
		<property name="id" tag="mainmenuid" />
		<property name="labelID" tag="property" attribute="name|labelID" />
		<property name="submenuVisibility" tag="property" attribute="name|submenuVisibility" />

		<property name="layout" tag="property" attribute="name|layout" />
		<property name="layout">square</property>

		<property name="autoscroll" tag="property" attribute="name|autoscroll" />
		<property name="autoscroll">False</property>

		<property name="top">250</property>	

		<property name="path" tag="property" attribute="name|widgetPath" />
		<property name="target" tag="property" attribute="name|widgetTarget" />
		<property name="target"></property>
		<property name="path">$INCLUDE[skinshortcuts-group-$SKINSHORTCUTS[submenuVisibility]]</property>

		<property name="art" tag="property" attribute="name|widgetArt" />
		<property name="art2" tag="property" attribute="name|widgetFallbackArt" />
		<property name="art">Icon</property>
		<property name="art2">Icon</property>

		<property name="shadow">noop</property>

		<property name="itemLabel" tag="label" />
		<property name="itemAction" tag="property" attribute="name|path" />
		<property name="itemIcon" tag="thumb" />
		<property name="itemIcon" tag="icon" />
		<property name="itemIcon">DefaultShortcut.png</property>

		<property name="widgetInclude" tag="property" attribute="name|widgetPath">widget-content</property>
		<property name="widgetInclude">widget-static</property>

		<property name="id" tag="mainmenuid" />
		<property name="submenuVisibility" tag="property" attribute="name|submenuVisibility" />
		<property name="label" tag="label" />
		<property name="background" tag="property" attribute="name|background" />

	</propertyGroup>

	<propertyGroup name="LumosLayout">

<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- selectdialog -->
	<defaultcontrol always="true">3</defaultcontrol>
	<include>WindowFadeAnimation</include>
	<controls>
		<!-- Window Background -->
		<include>WindowFadeBackgroundImage</include>

		<control type="group">

			<!-- Animation -->
			<include>DialogZoomAnimation</include>

			<!-- Heading -->
			<include content="Time">
				<param name="heading">$INFO[Control.GetLabel(1)]</param>
			</include>

			<control type="label" id="1">
				<left>-15000</left>
				<top>96</top>
				<width>1620</width>
				<height>72</height>
				<font>Font72</font>
			</control>

			<!-- Image -->
			<control type="image">
				<left>150</left>
				<top>225</top>
				<width>405</width>
				<height>600</height>
				<texture>$INFO[Container(6).ListItem.Icon]</texture>
				<aspectratio aligny="center">keep</aspectratio>
				<visible>Control.IsVisible(6) + !String.Contains(Container(6).ListItem.Icon,Default)</visible>
			</control>
			<control type="image">
				<left>150</left>
				<top>225</top>
				<width>405</width>
				<height>600</height>
				<texture>$INFO[Container(6).ListItem.Icon]</texture>
				<colordiffuse>OverlayColorFO</colordiffuse>
				<aspectratio aligny="center">keep</aspectratio>
				<visible>Control.IsVisible(6) + String.Contains(Container(6).ListItem.Icon,Default)</visible>
			</control>

			<!-- Scrollbar -->
			<control type="scrollbar" id="60">
				<left>690</left>
				<centertop>50%</centertop>
				<width>20</width>
				<height>692</height>
				<onleft>5</onleft>
				<onright condition="Control.IsVisible(3)">3</onright>
				<onright condition="Control.IsVisible(6)">6</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<colordiffuse>OverlayColorNF</colordiffuse>
				<texturesliderbackground border="11,1,1,1">common/ScrollBackground.png</texturesliderbackground>
				<texturesliderbar border="11,1,1,1">common/ScrollbarGripNF.png</texturesliderbar>
				<texturesliderbarfocus border="11,1,1,1" colordiffuse="DialogColor1">common/ScrollbarGripFO.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<visible>!Skin.HasSetting(Scrollbars)</visible>
			</control>

			<!-- List -->
			<control type="list" id="3">
				<left>750</left>
				<centertop>50%</centertop>
				<width>1050</width>
				<height>696</height>
				<onup>6</onup>
				<ondown>9001</ondown>
				<onleft>60</onleft>
				<onright>9001</onright>
				<orientation>vertical</orientation>
				<viewtype label="list">list</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<pagecontrol>60</pagecontrol>

				<itemlayout width="1050" height="58">
					<control type="label">
						<width>1050</width>
						<height>58</height>
						<font>Font36</font>
						<textcolor>DialogColor2</textcolor>
						<label>[LIGHT]$INFO[ListItem.Label][/LIGHT]</label>
					</control>
				</itemlayout>

				<focusedlayout width="1050" height="58">
					<control type="label">
						<width>1050</width>
						<height>58</height>
						<font>Font37</font>
						<textcolor>DialogColor1</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>Control.HasFocus(3)</visible>
					</control>
					<control type="image">
						<width>1050</width>
						<height>58</height>
						<texture>$VAR[focus58]</texture>
						<visible>Control.HasFocus(3)</visible>
					</control>
					<control type="label">
						<width>1050</width>
						<height>58</height>
						<font>Font37</font>
						<textcolor>DialogColor2</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>!Control.HasFocus(3)</visible>
					</control>
					<control type="image">
						<width>1050</width>
						<height>58</height>
						<texture colordiffuse="DialogColor2">$VAR[focus58]</texture>
						<visible>!Control.HasFocus(3)</visible>
					</control>
				</focusedlayout>

			</control>

			<!-- List -->
			<control type="list" id="6">
				<left>750</left>
				<centertop>50%</centertop>
				<width>1050</width>
				<height>672</height>
				<onup>noop</onup>
				<ondown>3</ondown>
				<onleft>60</onleft>
				<onright>9001</onright>
				<orientation>vertical</orientation>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout width="1050" height="96">
					<control type="image">
						<width>96</width>
						<height>96</height>
						<bordersize>6</bordersize>
						<aspectratio>scale</aspectratio>
						<texture>$INFO[ListItem.Icon]</texture>
						<animation effect="fade" start="100" end="75" condition="True">Conditional</animation>
						<visible>!String.Contains(ListItem.Icon,Default)</visible>
					</control>
					<control type="image">
						<width>96</width>
						<height>96</height>
						<bordersize>6</bordersize>
						<aspectratio>scale</aspectratio>
						<colordiffuse>OverlayColorNF</colordiffuse>
						<texture>$INFO[ListItem.Icon]</texture>
						<animation effect="fade" start="100" end="75" condition="True">Conditional</animation>
						<visible>String.Contains(ListItem.Icon,Default)</visible>
					</control>
					<control type="label">
						<left>140</left>
						<top>10</top>
						<width>1030</width>
						<height>36</height>
						<font>Font36</font>
						<textcolor>DialogColor2</textcolor>
						<label>[LIGHT]$INFO[ListItem.Label][/LIGHT]</label>
						<animation effect="slide" end="0,20" time="0" condition="String.IsEmpty(ListItem.Label2)">Conditional</animation>
					</control>
					<control type="label">
						<left>140</left>
						<top>54</top>
						<width>1030</width>
						<height>27</height>
						<font>Font27</font>
						<textcolor>DialogColor2</textcolor>
						<label>[LIGHT]$INFO[ListItem.Label2][/LIGHT]</label>
					</control>
				</itemlayout>

				<focusedlayout width="1050" height="96">
					<control type="image">
						<width>96</width>
						<height>96</height>
						<bordersize>6</bordersize>
						<aspectratio>scale</aspectratio>
						<texture>$INFO[ListItem.Icon]</texture>
						<animation effect="fade" start="100" end="75" condition="!Control.HasFocus(6)">Conditional</animation>
						<visible>!String.Contains(ListItem.Icon,Default)</visible>
					</control>
					<control type="image">
						<width>96</width>
						<height>96</height>
						<bordersize>6</bordersize>
						<aspectratio>scale</aspectratio>
						<colordiffuse>OverlayColorFO</colordiffuse>
						<texture>$INFO[ListItem.Icon]</texture>
						<animation effect="fade" start="100" end="75" condition="!Control.HasFocus(6)">Conditional</animation>
						<visible>String.Contains(ListItem.Icon,Default)</visible>
					</control>
					<control type="group">
						<visible>Control.HasFocus(6)</visible>
						<control type="label">
							<left>140</left>
							<top>10</top>
							<width>910</width>
							<height>36</height>
							<font>Font37</font>
							<textcolor>DialogColor1</textcolor>
							<label>$INFO[ListItem.Label]</label>
							<animation effect="slide" end="0,20" time="0" condition="String.IsEmpty(ListItem.Label2)">Conditional</animation>
						</control>
						<control type="image">
							<left>140</left>
							<top>10</top>
							<width>910</width>
							<height>44</height>
							<texture>$VAR[focus44]</texture>
							<visible>!ListItem.IsParentFolder</visible>
							<animation effect="slide" end="0,20" time="0" condition="String.IsEmpty(ListItem.Label2)">Conditional</animation>
						</control>
						<control type="label">
							<left>140</left>
							<top>54</top>
							<width>910</width>
							<height>27</height>
							<font>Font27</font>
							<textcolor>DialogColor1</textcolor>
							<label>[B]$INFO[ListItem.Label2][/B]</label>
						</control>
					</control>
					<control type="group">
						<visible>!Control.HasFocus(6)</visible>
						<control type="label">
							<left>140</left>
							<top>10</top>
							<width>910</width>
							<height>36</height>
							<font>Font37</font>
							<textcolor>DialogColor2</textcolor>
							<label>$INFO[ListItem.Label]</label>
							<animation effect="slide" end="0,20" time="0" condition="String.IsEmpty(ListItem.Label2)">Conditional</animation>
						</control>
						<control type="image">
							<left>140</left>
							<top>10</top>
							<width>910</width>
							<height>44</height>
							<texture colordiffuse="DialogColor2">$VAR[focus44]</texture>
							<visible>!ListItem.IsParentFolder</visible>
							<animation effect="slide" end="0,20" time="0" condition="String.IsEmpty(ListItem.Label2)">Conditional</animation>
						</control>
						<control type="label">
							<left>140</left>
							<top>54</top>
							<width>910</width>
							<height>27</height>
							<font>Font27</font>
							<textcolor>DialogColor2</textcolor>
							<label>[B]$INFO[ListItem.Label2][/B]</label>
						</control>
					</control>
				</focusedlayout>

			</control>

			<!-- Button grouplist background -->
			<include content="dialogButtonBackground">
				<param name="id">9001</param>
			</include>

			<!-- Button grouplist -->
			<control type="grouplist" id="9001">
				<left>120</left>
				<bottom>100</bottom>
				<width>1680</width>
				<height>66</height>
				<itemgap>30</itemgap>
				<onup>3</onup>
				<orientation>horizontal</orientation>
				<align>center</align>

				<!-- Cancel Button -->
				<control type="button" id="7">
					<width>Auto</width>
				</control>

				<!-- Get more Button -->
				<control type="button" id="5">
					<width>Auto</width>
				</control>

			</control>

		</control>

	</controls>

</window>

								<height>66</height>
								<texture colordiffuse="$VAR[TextColor2]">$VAR[focus66]</texture>
								<visible>!Control.HasFocus(120)</visible>
							</control>
						</control>
					</focusedlayout>

				</control>

				<!-- Manual search button -->
				<control type="button" id="160">
					<left>600</left>
					<top>926</top>
					<width>600</width>
					<height>66</height>
					<onleft>noop</onleft>
					<onright>noop</onright>
					<onup>150</onup>
					<ondown>noop</ondown>
					<label>24120</label>
					<textcolor>$VAR[TextColor2]</textcolor>
					<focusedcolor>$VAR[TextColor1]</focusedcolor>
				</control>

				<!-- Notification -->
				<control type="label" id="130">
					<left>1200</left>
					<top>926</top>
					<width>600</width>
					<height>66</height>
					<align>right</align>
					<label>31044</label>
					<textcolor>$VAR[TextColor1]</textcolor>
				</control>
				
				<!-- Button grouplist indicator -->
				<include content="dialogButtonIndicator">
					<param name="visibility">!Control.HasFocus(160)</param>
				</include>

			</control>
		</control>

	</controls>

</window>

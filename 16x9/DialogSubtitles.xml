								<textcolor>$VAR[TextColor2]</textcolor>
								<label>[CC]</label>
								<visible>ListItem.Property(hearingimp) + !Control.HasFocus(120)</visible>
							</control>
							<control type="label">
								<left>316</left>
								<width>120</width>
								<height>66</height>
								<textcolor>$VAR[TextColor2]</textcolor>
								<label>(SYNC)</label>
								<visible>ListItem.Property(sync) + !Control.HasFocus(120)</visible>
							</control>
							<control type="label">

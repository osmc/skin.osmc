						<width>360</width>
						<height>66</height>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="fade" start="100" end="75" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(150)">Conditional</animation>

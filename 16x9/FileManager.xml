<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- filemanager -->
	<defaultcontrol always="true">20</defaultcontrol>

	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<!-- Time -->
		<include content="Time">
			<param name="heading">$LOCALIZE[7]</param>
		</include>

		<!-- Left group -->
		<control type="group">
			<left>150</left>
			<top>228</top>

			<!-- Root label -->
			<control type="label" id="101">
				<width>770</width>
				<height>66</height>
				<haspath>true</haspath>
				<textcolor>$VAR[TextColor1]</textcolor>
			</control>

			<!-- Seperator -->
			<control type="image">
				<top>66</top>
				<width>770</width>
				<height>20</height>
				<texture border="1,12,1,1" colordiffuse="$VAR[DialogOverlayColorNF]">common/ScrollBackgroundHorizontal.png</texture>
			</control>

			<!-- Left list -->
			<control type="list" id="20">
				<top>86</top>
				<width>770</width>
				<height>594</height>
				<onleft>noop</onleft>
				<onright>21</onright>
				<onup>20</onup>
				<ondown>20</ondown>

				<itemlayout height="66" width="770">
					<control type="label">
						<width>770</width>
						<textcolor>$VAR[TextColor2]</textcolor>
						<label>[LIGHT]$INFO[ListItem.Label][/LIGHT]</label>
					</control>
					<control type="label">
						<width>770</width>
						<align>right</align>
						<textcolor>$VAR[TextColor2]</textcolor>
						<label>[LIGHT]$INFO[ListItem.Label2][/LIGHT]</label>
					</control>
				</itemlayout>

				<focusedlayout height="66" width="770">
					<control type="label">
						<width>770</width>
						<textcolor>$VAR[TextColor1]</textcolor>
						<label>[B]$INFO[ListItem.Label][/B]</label>
						<animation effect="fade" start="100" end="75" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(20)">Conditional</animation>
					</control>
					<control type="label">
						<width>770</width>
						<align>right</align>
						<textcolor>$VAR[TextColor1]</textcolor>
						<label>$INFO[ListItem.Label2]</label>
						<animation effect="fade" start="100" end="75" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(20)">Conditional</animation>
					</control>
					<control type="image">
						<top>2</top>
						<width>770</width>
						<height>44</height>
						<texture colordiffuse="$VAR[TextColor1]">$VAR[focus44]</texture>
						<animation effect="fade" start="100" end="75" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(20)">Conditional</animation>
						<visible>!ListItem.IsParentFolder</visible>
					</control>
				</focusedlayout>

			</control>

			<!-- Number label -->
			<control type="grouplist">
				<top>698</top>
				<width>770</width>
				<height>44</height>
				<align>left</align>
				<itemgap>6</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="label">
					<top>3</top>
					<width>auto</width>
					<height>44</height>
					<align>left</align>
					<font>Font25</font>
					<label>$INFO[Container(20).NumItems]</label>
					<textcolor>$VAR[TextColor2]</textcolor>
				</control>
				<control type="label">
					<width>auto</width>
					<height>44</height>
					<align>left</align>
					<label>31000</label>
					<font>Font33</font>
					<textcolor>$VAR[TextColor2]</textcolor>
					<visible>!Integer.IsGreater(Container(20).NumItems,1)</visible>
				</control>
				<control type="label">
					<width>auto</width>
					<height>44</height>
					<align>left</align>
					<label>31001</label>
					<font>Font33</font>
					<textcolor>$VAR[TextColor2]</textcolor>
					<visible>Integer.IsGreater(Container(20).NumItems,1)</visible>
				</control>
			</control>

		</control>

		<!-- Right group -->
		<control type="group">
			<left>1000</left>
			<top>228</top>

			<!-- Root label -->
			<control type="label" id="102">
				<width>770</width>
				<height>66</height>
				<haspath>true</haspath>
				<textcolor>$VAR[TextColor1]</textcolor>
			</control>

			<!-- Seperator -->
			<control type="image">
				<top>66</top>
				<width>770</width>
				<height>20</height>
				<texture border="1,12,1,1" colordiffuse="$VAR[DialogOverlayColorNF]">common/ScrollBackgroundHorizontal.png</texture>
			</control>

			<!-- Right list -->
			<control type="list" id="21">
				<top>86</top>
				<width>770</width>
				<height>594</height>
				<onleft>20</onleft>
				<onright>noop</onright>
				<onup>21</onup>
				<ondown>21</ondown>

				<itemlayout height="66" width="770">
					<control type="label">
						<width>770</width>
						<textcolor>$VAR[TextColor2]</textcolor>
						<label>[LIGHT]$INFO[ListItem.Label][/LIGHT]</label>
					</control>
					<control type="label">
						<width>770</width>
						<align>right</align>
						<textcolor>$VAR[TextColor2]</textcolor>
						<label>[LIGHT]$INFO[ListItem.Label2][/LIGHT]</label>
					</control>
				</itemlayout>

				<focusedlayout height="66" width="770">
					<control type="group">
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(21)">Conditional</animation>
						<control type="label">
							<width>770</width>
							<textcolor>$VAR[TextColor1]</textcolor>
							<label>[B]$INFO[ListItem.Label][/B]</label>
							<visible>Control.HasFocus(21)</visible>
						</control>
						<control type="label">
							<width>770</width>
							<align>right</align>
							<textcolor>$VAR[TextColor1]</textcolor>
							<label>$INFO[ListItem.Label2]</label>
							<visible>Control.HasFocus(21)</visible>
						</control>
						<control type="image">
							<top>2</top>
							<width>770</width>
							<height>44</height>
							<texture colordiffuse="$VAR[TextColor1]">$VAR[focus44]</texture>
							<visible>!ListItem.IsParentFolder + Control.HasFocus(21)</visible>
						</control>
						<control type="label">
							<width>770</width>
							<textcolor>$VAR[TextColor2]</textcolor>
							<label>[B]$INFO[ListItem.Label][/B]</label>
							<visible>!Control.HasFocus(21)</visible>
						</control>
						<control type="label">
							<width>770</width>
							<align>right</align>
							<textcolor>$VAR[TextColor2]</textcolor>
							<label>$INFO[ListItem.Label2]</label>
							<visible>!Control.HasFocus(21)</visible>
						</control>
						<control type="image">
							<top>2</top>
							<width>770</width>
							<height>44</height>
							<texture colordiffuse="$VAR[TextColor2]">$VAR[focus44]</texture>
							<visible>!ListItem.IsParentFolder + !Control.HasFocus(21)</visible>
						</control>
					</control>
				</focusedlayout>

			</control>

			<!-- Number label -->
			<control type="grouplist">
				<top>698</top>
				<width>770</width>
				<height>44</height>
				<align>right</align>
				<itemgap>6</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="label">
					<top>3</top>
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<font>Font25</font>
					<label>$INFO[Container(21).NumItems]</label>
					<textcolor>$VAR[TextColor2]</textcolor>
				</control>
				<control type="label">
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>31000</label>
					<font>Font33</font>
					<textcolor>$VAR[TextColor2]</textcolor>
					<visible>!Integer.IsGreater(Container(21).NumItems,1)</visible>
				</control>
				<control type="label">
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>31001</label>
					<font>Font33</font>
					<textcolor>$VAR[TextColor2]</textcolor>
					<visible>Integer.IsGreater(Container(21).NumItems,1)</visible>
				</control>
			</control>

		</control>

	</controls>

</window>
<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- pvrosdchannels -->
	<defaultcontrol always="true">11</defaultcontrol>
	<include>DialogZoomAnimation</include>
	<zorder>0</zorder>

	<controls>

		<!-- Menu -->
		<control type="group">
			<left>150</left>
			<top>200</top>

			<!-- Background -->
			<control type="image">
				<width>1620</width>
				<height>680</height>
				<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
			</control>
			
			<!-- Icon -->
			<control type="image">
				<left>215</left>
				<top>31</top>
				<width>220</width>
				<height>220</height>
				<aspectratio align="right">keep</aspectratio>
				<texture>$VAR[PVRChannelIconDialogOSD]</texture>
			</control>

			<!-- Episode Information -->
			<control type="group">
				<left>20</left>
				<top>282</top>
				<width>650</width>
				<height>378</height>
				<control type="textbox">
					<label>$VAR[PVRDescriptionDialogGuide]</label>
					<textcolor>$VAR[TextColor1]</textcolor>
					<autoscroll delay="5000" time="1400" repeat="10000">true</autoscroll>
					<visible>Skin.String(PlotFont,S) | Skin.String(PlotFont,S light)</visible>
				</control>
				<control type="textbox">
					<font>Font30</font>
					<label>$VAR[PVRDescriptionDialogGuide]</label>
					<textcolor>$VAR[TextColor1]</textcolor>
					<autoscroll delay="5000" time="1300" repeat="10000">true</autoscroll>
					<visible>Skin.String(PlotFont,M) | Skin.String(PlotFont,M light)</visible>
				</control>
				<control type="textbox">
					<font>Font33</font>
					<label>$VAR[PVRDescriptionDialogGuide]</label>
					<textcolor>$VAR[TextColor1]</textcolor>
					<autoscroll delay="5000" time="1200" repeat="10000">true</autoscroll>
					<visible>Skin.String(PlotFont,L) | Skin.String(PlotFont,XL) | Skin.String(PlotFont,L light) | Skin.String(PlotFont,XL light)</visible>
				</control>
			</control>

			<!-- List -->
			<control type="fixedlist" id="11">
				<left>750</left>
				<top>25</top>
				<width>750</width>
				<height>630</height>
				<focusposition>2</focusposition>
				<orientation>vertical</orientation>
				<viewtype label="535">list</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout height="90" width="750">
					<control type="label">
						<left>32</left>
						<top>-12</top>
						<width>718</width>
						<height>90</height>
						<font>Font36</font>
						<label>$INFO[ListItem.ChannelName]</label>
						<textcolor>$VAR[TextColor2]</textcolor>
					</control>
					<control type="label">
						<left>32</left>
						<top>58</top>
						<width>718</width>
						<height>27</height>
						<font>Font27</font>
						<textcolor>$VAR[TextColor2]</textcolor>
						<label>[LIGHT]$INFO[ListItem.StartTime,,:][/LIGHT] $INFO[ListItem.Title]</label>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(11)">Conditional</animation>
					</control>
					<!-- Watched status -->
					<control type="image">
						<left>0</left>
						<top>38</top>
						<width>14</width>
						<height>14</height>
						<texture>$VAR[StatusOverlay]</texture>
						<colordiffuse>$VAR[OverlayColorNF]</colordiffuse>
						<animation effect="fade" start="50" end="50" condition="true">Conditional</animation>
					</control>

					<control type="label">
						<left>32</left>
						<top>-12</top>
						<width>718</width>
						<height>90</height>
						<font>Font36</font>
						<label>$INFO[ListItem.ChannelNumberLabel]</label>
						<align>right</align>
						<textcolor>$VAR[TextColor2]</textcolor>
					</control>
				</itemlayout>

				<focusedlayout height="180" width="750">
					<control type="label">
						<left>32</left>
						<top>43</top>
						<width>718</width>
						<height>48</height>
						<font>Font48</font>
						<label>$INFO[ListItem.ChannelName]</label>
						<textcolor>$VAR[TextColor1]</textcolor>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(11)">Conditional</animation>
					</control>
					<control type="label">
						<left>32</left>
						<top>100</top>
						<width>718</width>
						<height>27</height>
						<font>Font27</font>
						<label>[LIGHT]$INFO[ListItem.StartTime,,:][/LIGHT] $INFO[ListItem.Title]</label>
						<textcolor>$VAR[TextColor1]</textcolor>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(11)">Conditional</animation>
					</control>
					<control type="label">
						<left>32</left>
						<top>127</top>
						<width>718</width>
						<height>27</height>
						<font>Font27</font>
						<label>[LIGHT]$INFO[ListItem.NextStartTime,,:][/LIGHT] $INFO[ListItem.NextTitle]</label>
						<textcolor>$VAR[TextColor1]</textcolor>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(11)">Conditional</animation>
					</control>
					<control type="image">
						<left>32</left>
						<top>43</top>
						<width>718</width>
						<height>58</height>
						<texture colordiffuse="$VAR[TextColor1]">$VAR[focus58]</texture>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(11)">Conditional</animation>
					</control>
					<!-- Watched status -->
					<control type="image">
						<left>0</left>
						<top>61</top>
						<width>14</width>
						<height>14</height>
						<texture>$VAR[StatusOverlay]</texture>
						<colordiffuse>$VAR[TextColor1]</colordiffuse>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(11)">Conditional</animation>
					</control>
					<control type="label">
						<left>32</left>
						<top>43</top>
						<width>718</width>
						<height>48</height>
						<font>Font36</font>
						<label>$INFO[ListItem.ChannelNumberLabel]</label>
						<align>right</align>
						<textcolor>$VAR[TextColor1]</textcolor>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(11)">Conditional</animation>
					</control>
				</focusedlayout>

			</control>

		</control>

	</controls>

</window>
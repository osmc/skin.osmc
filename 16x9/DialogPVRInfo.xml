<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- pvrguideinfo -->
	<defaultcontrol always="true">7</defaultcontrol>

	<controls>
		<!-- Window Background -->
		<include>WindowFadeBackgroundImage</include>

		<control type="group">

			<!-- Animation -->
			<include>DialogZoomAnimation</include>

			<!-- Heading -->
			<include content="Time">
				<param name="heading">$LOCALIZE[19047]</param>
			</include>

			<!-- Name -->
			<control type="label">
				<left>595</left>
				<top>235</top>
				<width>1175</width>
				<height>36</height>
				<font>Font36</font>
				<textcolor>DialogColor1</textcolor>
				<label>[B]$INFO[ListItem.Title][/B]</label>
			</control>

			<!-- Info -->
			<control type="group">
				<left>375</left>
				<top>303</top>

				<!-- Details -->
				<control type="grouplist">
					<width>1170</width>
					<height>336</height>
					<itemgap>12</itemgap>
					<orientation>vertical</orientation>
					<usecontrolcoords>true</usecontrolcoords>

					<!-- Time description -->
					<control type="group">
						<height>36</height>
						<width>1170</width>
						<control type="label">
							<width>200</width>
							<height>36</height>
							<align>right</align>
							<font>Font36</font>
							<label>142</label>
							<textcolor>DialogColor2</textcolor>
						</control>
						<control type="label">
							<left>220</left>
							<width>950</width>
							<height>36</height>
							<font>Font36</font>
							<label>$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime] ($INFO[ListItem.StartDate])</label>
							<textcolor>DialogColor1</textcolor>
						</control>
					</control>

					<!-- Duration -->
					<control type="group">
						<height>36</height>
						<width>1170</width>
						<visible>!String.IsEmpty(ListItem.Duration)</visible>
						<control type="label">
							<width>200</width>
							<height>36</height>
							<align>right</align>
							<font>Font36</font>
							<label>180</label>
							<textcolor>DialogColor2</textcolor>
						</control>
						<control type="label">
							<left>220</left>
							<width>950</width>
							<height>36</height>
							<font>Font36</font>
							<label>$VAR[Duration]</label>
							<textcolor>DialogColor1</textcolor>
						</control>
					</control>
					
					<!-- Channel Name -->
					<control type="group">
						<height>36</height>
						<width>1170</width>
						<visible>!String.IsEmpty(ListItem.ChannelName)</visible>
						<control type="label">
							<width>200</width>
							<height>36</height>
							<align>right</align>
							<font>Font36</font>
							<label>19148</label>
							<textcolor>DialogColor2</textcolor>
						</control>
						<control type="label">
							<left>220</left>
							<width>950</width>
							<height>36</height>
							<font>Font36</font>
							<label>$INFO[ListItem.ChannelName]</label>
							<textcolor>DialogColor1</textcolor>
						</control>
					</control>

					<!-- Genre -->
					<control type="group">
						<height>36</height>
						<width>1170</width>
						<visible>!String.IsEmpty(ListItem.Genre)</visible>
						<control type="label">
							<width>200</width>
							<height>36</height>
							<align>right</align>
							<font>Font36</font>
							<label>135</label>
							<textcolor>DialogColor2</textcolor>
						</control>
						<control type="label">
							<left>220</left>
							<width>950</width>
							<height>36</height>
							<font>Font36</font>
							<label>$INFO[ListItem.Genre]</label>
							<textcolor>DialogColor1</textcolor>
						</control>
					</control>

				</control>

				<!-- Plot -->
				<control type="textbox" id="400">
					<top>370</top>
					<width>1170</width>
					<height>210</height>
					<label>$VAR[Plot]</label>
					<textcolor>DialogColor2</textcolor>
				</control>

			</control>

			<!-- Button grouplist background -->
			<include content="dialogButtonBackground">
				<param name="id">9000</param>
			</include>

			<!-- Buttons -->
			<control type="grouplist" id="9000">
				<left>120</left>
				<bottom>100</bottom>
				<width>1680</width>
				<height>66</height>
				<orientation>horizontal</orientation>
				<align>center</align>
				<itemgap>30</itemgap>

				<!-- OK Button -->
				<control type="button" id="7">
					<width>auto</width>
					<label>186</label>
				</control>
				<!-- Switch to Channel -->
				<control type="button" id="5">
					<width>auto</width>
					<label>19165</label>
					<visible>Window.IsActive(PVRGuideInfo)</visible>
				</control>
				<!-- Find Similar -->
				<control type="button" id="4">
					<width>auto</width>
					<label>19003</label>
					<visible>Window.IsActive(PVRGuideInfo)</visible>
				</control>
				<!-- Record Button -->
				<control type="button" id="6">
					<width>auto</width>
					<label>-</label>
					<visible>Window.IsActive(PVRGuideInfo)</visible>
				</control>
				<!-- Play Recording Button -->
				<control type="button" id="8">
					<width>auto</width>
					<label>19687</label>
					<visible>Window.IsActive(PVRRecordingInfo)</visible>
				</control>
				<!-- Add Timer -->
				<control type="button" id="9">
					<width>auto</width>
					<label>19061</label>
					<visible>Window.IsActive(PVRGuideInfo)</visible>
				</control>

			</control>

		</control>

	</controls>

</window>
<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- home -->
	<backgroundcolor>0x00000000</backgroundcolor>
	<defaultcontrol always="true">9000</defaultcontrol>

	<!-- Skin Shortcuts -->
	<onload>RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;group=mainmenu&amp;levels=1)</onload>

	<!-- Skin Helper Service -->
	<onload>Skin.SetBool(SkinHelper.EnablePVRThumbs)</onload>

	<controls>

		<!-- Hidden control to load weather conditions -->
		<control type="label">
			<font>-</font>
			<label>$INFO[Weather.Conditions]</label>
		</control>

		<!-- Background -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture>common/white.png</texture>
		</control>

		<include content="WindowBackgroundImage">
			<param name="isHomeWindow">True</param>
		</include>

		<control type="image" id="120001">
			<include>FullscreenDimensions</include>
			<include>VisibleFadeAnimation</include>
			<fadetime>400</fadetime>
			<colordiffuse>FanartDiffuse</colordiffuse>
			<texture fallback="transparent.png">$VAR[widgetBackground]</texture>
			<animation effect="fade" start="100" end="0" condition="[Player.HasVideo + Skin.HasSetting(BackgroundVideo)] | [Player.HasAudio + Skin.HasSetting(BackgroundVisualisation) + !String.Contains(Window(Videos).Property(TvTunesIsAlive),True)]">Conditional</animation>
			<animation effect="fade" start="70" end="70" condition="![Player.HasVideo + Skin.HasSetting(BackgroundVideo)] | [Player.HasAudio + Skin.HasSetting(BackgroundVisualisation) + !String.Contains(Window(Videos).Property(TvTunesIsAlive),True)]">Conditional</animation>
		</control>
		<include>skinshortcuts-template-weatherBackground</include>

		<!-- Time -->
		<include content="Time">
			<param name="heading"></param>
		</include>

		<!-- Logo -->
		<control type="image">
			<left>120</left>
			<top>105</top>
			<width>50</width>
			<height>50</height>
			<texture>logo.png</texture>
			<include>WindowFadeAnimation</include>
		</control>
		
		<!-- Home layout -->
		<control type="group">
			<include>WindowFadeAnimation</include>
			<include>HomeDefault</include>
		</control>

		<!-- RSS -->
		<control type="image">
			<right>0</right>
			<bottom>0</bottom>
			<width>1920</width>
			<height>37</height>
			<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
			<visible>system.getbool(lookandfeel.enablerssfeeds)</visible>
			<include>WindowFadeAnimation</include>
		</control>
		<control type="rss" id="1">
			<left>0</left>
			<bottom>0</bottom>
			<width>1920</width>
			<height>35</height>
			<font>Font30</font>
			<textcolor>TextColor2</textcolor>
			<headlinecolor>TextColor2</headlinecolor>
			<titlecolor>TextColor2</titlecolor>
			<urlset>1</urlset>
			<include>WindowFadeAnimation</include>
		</control>

	</controls>

</window>
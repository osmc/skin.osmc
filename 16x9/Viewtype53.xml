<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Viewtype53">

		<control type="group">
			<visible>Control.IsVisible(53)</visible>

			<!-- Thumbs -->
			<control type="panel" id="53">
				<left>150</left>
				<top>170</top>
				<width>1620</width>
				<height>666</height>
				<onleft>63</onleft>
				<onright condition="!Skin.HasSetting(KioskMode)">3001</onright>
				<onup>53</onup>
				<ondown>53</ondown>
				<pagecontrol>63</pagecontrol>
				<preloaditems>4</preloaditems>
				<viewtype label="$LOCALIZE[31078]">icon</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)</visible>

				<itemlayout width="270" height="333">
					<control type="image">
						<left>34</left>
						<width>202</width>
						<height>300</height>
						<colordiffuse>DiffusePosterNF</colordiffuse>
						<texture background="true">$VAR[mediaImages]</texture>
						<aspectratio align="center">scale</aspectratio>
					</control>
					<!-- Watched status -->
					<control type="image">
						<left>170</left>
						<top>286</top>
						<width>30</width>
						<height>42</height>
						<texture>$VAR[StatusOverlayWide]</texture>
					</control>
				</itemlayout>

				<focusedlayout width="270" height="333">
					<control type="image">
						<left>34</left>
						<width>202</width>
						<height>300</height>
						<texture background="true">$VAR[mediaImages]</texture>
						<aspectratio align="center">scale</aspectratio>
					</control>
					<!-- Watched status -->
					<control type="image">
						<left>170</left>
						<top>286</top>
						<width>30</width>
						<height>42</height>
						<texture>$VAR[StatusOverlayWide]</texture>
					</control>
				</focusedlayout>
			</control>

			<control type="group">
				<centerleft>50%</centerleft>
				<top>850</top>
				<width>1920</width>
				<height>100</height>

				<!-- Title -->
				<control type="label">
					<left>90</left>
					<top>0</top>
					<width>1740</width>
					<height>72</height>
					<font>Font72</font>
					<align>center</align>
					<textcolor>TextColor1</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="false" condition="!Control.HasFocus(53)">Conditional</animation>
				</control>

				<!-- Details -->
				<control type="label">
					<left>90</left>
					<top>88</top>
					<width>1740</width>
					<height>54</height>
					<font>Font27</font>
					<align>center</align>
					<aligny>top</aligny>
					<label>$VAR[Label2]</label>
					<textcolor>TextColor1</textcolor>
					<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="false" condition="!Control.HasFocus(53)">Conditional</animation>
				</control>

			</control>

		</control>

	</include>

</includes>

<?xml version="1.0" encoding="UTF-8"?>
<window>
	<animation effect="slide" start="550,0" time="200">WindowOpen</animation>
	<animation effect="slide" end="550,0" time="200">WindowClose</animation>
	<zorder>100</zorder>
	<defaultcontrol>3012</defaultcontrol>
	<!-- infodialog -->
	<controls>
		<control type="group">
			<animation effect="slide" end="0,50" time="200" condition="String.IsEqual(Window(10000).Property(isCaching),True)">Conditional</animation>
			<animation effect="slide" end="0,50" time="200" condition="Window.IsActive(volumebar)">Conditional</animation>
			<animation effect="slide" end="0,20" time="200" condition="String.IsEqual(Window(10000).Property(isCaching),True) | Window.IsActive(volumebar)">Conditional</animation>
			<animation effect="slide" end="0,85" time="200" condition="Window.IsActive(notification)">Conditional</animation>
			<animation effect="slide" end="0,85" time="200" condition="Window.IsActive(extendedprogressdialog)">Conditional</animation>
		
			<control type="image">
				<right>0</right>
				<top>90</top>
				<width>550</width>
				<height>75</height>
				<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
			</control>

			<!-- Title -->
			<control type="label">
				<right>10</right>
				<top>100</top>
				<width>530</width>
				<height>20</height>
				<align>left</align>
				<scroll>true</scroll>
				<font>Font27</font>
				<label>$ADDON[service.nextup.notification 30008]</label>
			</control>

			<!-- Details + Watch now -->
			<control type="button" id="3012">
				<right>10</right>
				<top>125</top>
				<width>530</width>
				<height>37</height>
				<align>left</align>
				<aligny>top</aligny>
				<font>Font27-Light</font>
				<label>$INFO[Control.GetLabel(3002),(,) ]$INFO[Control.GetLabel(3000)]</label>
				<onback>SendClick(3013)</onback>
				<texturefocus colordiffuse="$VAR[buttonfocus]">common/focus37.png</texturefocus>
			</control>
		</control>

		<!-- Stop watching -->
		<control type="button" id="3013">
			<left>-10000</left>
			<top>-10000</top>
			<width>260</width>
			<height>20</height>
			<align>left</align>
			<aligny>top</aligny>
			<font>Font27</font>
			<label>222</label>
		</control>

        <!-- Season/Episode -->
        <control type="label" id="3002">
            <left>-10000</left>
            <top>-10000</top>
            <width>1620</width>
            <height>72</height>
            <font>Font72</font>
            <textcolor>$VAR[TextColor1]</textcolor>
            <label></label>
        </control>

		<!-- Episode name -->
		<control type="label" id="3000">
			<left>-10000</left>
			<top>-10000</top>
			<width>1620</width>
			<height>72</height>
			<font>Font72</font>
			<textcolor>$VAR[TextColor1]</textcolor>
			<label></label>
		</control>

		<!-- Not displayed by us, but required by the script -->
		<control type="textbox" id="3001">
			<left>-10000</left>
			<top>-10000</top>
			<width>1620</width>
			<height>72</height>
			<font>Font72</font>
			<textcolor>$VAR[TextColor1]</textcolor>
			<label></label>
		</control>
		<control type="label" id="3002">
			<left>-10000</left>
			<top>-10000</top>
			<width>1620</width>
			<height>72</height>
			<font>Font72</font>
			<textcolor>$VAR[TextColor1]</textcolor>
			<label></label>
		</control>
		<control type="label" id="3003">
			<left>-10000</left>
			<top>-10000</top>
			<width>1620</width>
			<height>72</height>
			<font>Font72</font>
			<textcolor>$VAR[TextColor1]</textcolor>
			<label></label>
		</control>
		<control type="label" id="3004">
			<left>-10000</left>
			<top>-10000</top>
			<width>1620</width>
			<height>72</height>
			<font>Font72</font>
			<textcolor>$VAR[TextColor1]</textcolor>
			<label></label>
		</control>

	</controls>

</window>

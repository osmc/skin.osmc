<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- sliderdialog -->
	<defaultcontrol always="true">11</defaultcontrol>

	<controls>
		<control type="group">
			<left>685</left>
			<top>10</top>
			<width>550</width>
			<height>75</height>
			
			<!-- Animation -->
			<include>DialogZoomAnimation</include>
			
			<!-- Background image -->
			<control type="image">
				<width>550</width>
				<height>75</height>
				<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
			</control>

			<!-- Heading -->
			<control type="label" id="10">
				<top>10</top>
				<width>550</width>
				<height>20</height>
				<align>center</align>
				<scroll>true</scroll>
				<font>Font27</font>
			</control>

			<!-- Details -->
			<control type="label" id="12">
				<top>35</top>
				<width>550</width>
				<height>25</height>
				<align>center</align>
				<aligny>top</aligny>
				<scroll>true</scroll>
				<font>Font27-Light</font>
			</control>

			<!-- Slider -->
			<control type="slider" id="11">
				<top>65</top>
				<width>550</width>
				<height>20</height>
			</control>
			
		</control>

	</controls>

</window>

<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- osdvideosettings -->
	<defaultcontrol always="true">11</defaultcontrol>
	<include>DialogZoomAnimation</include>
	
	<controls>

		<!-- Menu -->
		<control type="group">
			<left>150</left>
			<top>150</top>

			<!-- Background -->
			<control type="image">
				<width>1620</width>
				<height>695</height>
				<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
			</control>

			<!-- Heading label -->
			<control type="label" id="2">
				<left>20</left>
				<top>10</top>
				<width>750</width>
				<height>48</height>
				<font>Font33</font>
				<textcolor>$VAR[TextColor1]</textcolor>
				<label>$INFO[VideoPlayer.ChannelName]</label>
			</control>

			<!-- Date label -->
			<control type="label" id="2">
				<left>20</left>
				<top>62</top>
				<width>750</width>
				<height>36</height>
				<font>Font33</font>
				<textcolor>$VAR[TextColor1]</textcolor>
				<label>[LIGHT]$INFO[Container(11).ListItem.StartDate][/LIGHT]</label>
			</control>
			
			<!-- Episode Information -->
			<control type="textbox">
				<left>20</left>
				<top>160</top>
				<width>650</width>
				<height>500</height>
				<label>$INFO[Container(11).ListItem.TVShowTitle,[B],[/B][CR]]$INFO[Container(11).ListItem.Title,[B],[/B][CR]][LIGHT]$INFO[Container(11).ListItem.Season,$LOCALIZE[20373] , / ]$INFO[Container(11).ListItem.Episode,$LOCALIZE[20359],[CR] ][/LIGHT]$INFO[Container(11).ListItem.Plot]</label>
				<textcolor>$VAR[TextColor1]</textcolor>
				<autoscroll delay="5000" time="1400" repeat="10000">true</autoscroll>
			</control>



			<!-- List -->
			<control type="list" id="11">
				<left>750</left>
				<top>116</top>
				<width>750</width>
				<height>561</height>
				<onleft>Close</onleft>
				<onright>Close</onright>
				<onup>11</onup>
				<ondown>11</ondown>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout width="750" height="51">

					<!-- Start time -->
					<control type="label">
						<top>2</top>
						<width>140</width>
						<height>51</height>
						<font>Font27</font>
						<align>right</align>
						<textcolor>$VAR[TextColor2]</textcolor>
						<label>$INFO[ListItem.StartTime]</label>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>160</left>
						<width>520</width>
						<height>51</height>
						<textcolor>$VAR[TextColor2]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Recording image -->
					<control type="image">
						<right>4</right>
						<top>14</top>
						<width>30</width>
						<height>30</height>
						<texture>pvr/Recording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>

					<!-- Timer image -->
					<control type="image">
						<right>0</right>
						<top>10</top>
						<width>38</width>
						<height>40</height>
						<texture>pvr/Timer.png</texture>
						<visible>[ListItem.HasTimer | ListItem.HasTimerSchedule] + !ListItem.IsRecording</visible>
					</control>

				</itemlayout>

				<focusedlayout width="750" height="51">

					<!-- Start time -->
					<control type="label">
						<top>2</top>
						<width>140</width>
						<height>51</height>
						<font>Font27</font>
						<align>right</align>
						<textcolor>$VAR[TextColor1]</textcolor>
						<label>$INFO[ListItem.StartTime]</label>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(11)">Conditional</animation>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>160</left>
						<width>520</width>
						<height>51</height>
						<textcolor>$VAR[TextColor1]</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(11)">Conditional</animation>
					</control>

					<!-- Highlighting -->
					<control type="image">
						<top>2</top>
						<width>680</width>
						<height>51</height>
						<texture colordiffuse="$VAR[TextColor1]">$VAR[focus52]</texture>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(11)">Conditional</animation>
					</control>
					
					<!-- Recording image -->
					<control type="image">
						<right>4</right>
						<top>14</top>
						<width>30</width>
						<height>30</height>
						<texture>pvr/Recording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>

					<!-- Timer image -->
					<control type="image">
						<right>0</right>
						<top>10</top>
						<width>38</width>
						<height>40</height>
						<texture>pvr/Timer.png</texture>
						<visible>[ListItem.HasTimer | ListItem.HasTimerSchedule] + !ListItem.IsRecording</visible>
					</control>

				</focusedlayout>

			</control>

		</control>

	</controls>

</window>

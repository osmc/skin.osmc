<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- script-skinshortcuts -->
	<defaultcontrol always="true">211</defaultcontrol>
	<include>WindowFadeAnimation</include>

	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<include content="Time">
			<param name="heading">$VAR[skinshortcuts-window]</param>
		</include>

		<!-- Heading -->
		<control type="label" id="500">
			<left>-1500000</left>
			<top>96</top>
			<width>1620</width>
			<height>72</height>
			<font>Font72</font>
		</control>

		<!-- Move down -->
		<control type="button" id="304">
			<left>-10</left>
			<top>-10</top>
			<width>1</width>
			<height>1</height>
			<onleft>noop</onleft>
			<onright>303</onright>
			<onup>Control.Move(211,-1)</onup>
			<ondown>Control.Move(211,1)</ondown>
		</control>

		<!-- Move up -->
		<control type="button" id="303">
			<left>-10</left>
			<top>-10</top>
			<width>1</width>
			<height>1</height>
			<onleft>304</onleft>
			<onright>9000</onright>
			<onup>Control.Move(211,-1)</onup>
			<ondown>Control.Move(211,1)</ondown>
		</control>

		<!-- Left list -->
		<control type="list" id="211">
			<left>95</left>
			<top>228</top>
			<width>360</width>
			<height>660</height>
			<onleft>noop</onleft>
			<onright>304</onright>
			<onup>noop</onup>
			<ondown>9001</ondown>
			<scrolltime tween="sine" easing="out">240</scrolltime>

			<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="false" condition="ControlGroup(9000).HasFocus | ControlGroup(9001).HasFocus">Conditional</animation>

			<itemlayout width="360" height="66">
				<control type="label">
					<left>25</left>
					<width>260</width>
					<height>66</height>
					<textcolor>DialogColor2</textcolor>
					<label>$VAR[skinshortcuts-disableindicator]$VAR[skinshortcuts-itemlabel]</label>
				</control>
			</itemlayout>

			<focusedlayout width="360" height="66">
				<control type="label">
					<left>25</left>
					<width>260</width>
					<height>66</height>
					<scroll>true</scroll>
					<label>$VAR[skinshortcuts-disableindicator]$VAR[skinshortcuts-itemlabel]</label>
					<animation effect="fade" start="100" end="75" time="0" condition="!Control.HasFocus(211)">Conditional</animation>
				</control>
				<control type="image">
					<left>290</left>
					<width>35</width>
					<height>66</height>
					<texture colordiffuse="DialogColor1">common/ArrowDownNF.png</texture>
					<visible>!Control.HasFocus(304)</visible>
				</control>
				<control type="image">
					<left>325</left>
					<width>35</width>
					<height>66</height>
					<texture colordiffuse="DialogColor1">common/ArrowUpNF.png</texture>
					<visible>!Control.HasFocus(303)</visible>
				</control>
				<control type="image">
					<left>290</left>
					<width>35</width>
					<height>66</height>
					<texture colordiffuse="DialogColor1">common/ArrowDownFO.png</texture>
					<visible>Control.HasFocus(304)</visible>
				</control>
				<control type="image">
					<left>325</left>
					<width>35</width>
					<height>66</height>
					<texture colordiffuse="DialogColor1">common/ArrowUpFO.png</texture>
					<visible>Control.HasFocus(303)</visible>
				</control>
			</focusedlayout>

		</control>

		<!-- Right grouplist -->
		<control type="grouplist" id="9000">
			<left>750</left>
			<top>228</top>
			<width>1050</width>
			<height>660</height>
			<itemgap>0</itemgap>
			<onleft>303</onleft>
			<onright>noop</onright>
			<onup>noop</onup>
			<ondown>9001</ondown>
			<orientation>vertical</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<scrolltime tween="sine" easing="out">240</scrolltime>

			<!-- Change shortcut -->
			<control type="button" id="401">
				<width>1050</width>
				<height>60</height>
				<label>$ADDON[script.skinshortcuts 32048]</label>
			</control>

			<!-- Change action -->
			<control type="button" id="307">
				<width>1050</width>
				<height>40</height>
				<label>  -  $ADDON[script.skinshortcuts 32027]</label>
				<label2>$INFO[Container(211).ListItem.Property(displaypath)]</label2>
			</control>

			<!-- Change background -->
			<control type="button" id="310">
				<width>1200</width>
				<height>40</height>
				<label>  -  $ADDON[script.skinshortcuts 32045]</label>
				<label2>$INFO[Container(211).ListItem.Property(Background)]</label2>
				<visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>
			</control>

			<!-- Edit widget -->
			<control type="button" id="312">
				<width>1050</width>		
				<height>60</height>		
				<label>$ADDON[script.skinshortcuts 32044]</label>
				<label2>$INFO[Container(211).ListItem.Property(widgetName)]</label2>
				<visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>
			</control>

			<!-- Change size option -->
			<control type="button" id="601">
				<width>1050</width>
				<height>40</height>
				<label>  -  $LOCALIZE[289]</label>
				<label2>$VAR[skinshortcuts-size]</label2>
				<enable>!String.IsEmpty(Container(211).ListItem.Property(widget)) + !String.IsEqual(Container(211).ListItem.Property(widget),WeatherWidget)</enable>
				<visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>
				<disabledcolor>TextColor4</disabledcolor>
			</control>

			<!-- Change artwork -->
			<control type="button" id="602">
				<width>1050</width>
				<height>40</height>
				<label>  -  $LOCALIZE[31033]</label>
				<label2>$VAR[skinshortcuts-art]</label2>
				<enable>!String.IsEmpty(Container(211).ListItem.Property(widget)) + !String.IsEqual(Container(211).ListItem.Property(widget),WeatherWidget) + !Container(8000).IsUpdating</enable>
				<visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>
				<disabledcolor>TextColor4</disabledcolor>
			</control>
			<!-- Fallback artwork -->
			<control type="button" id="603">
				<width>1050</width>
				<height>40</height>
				<label>  -  $LOCALIZE[31029]</label>
				<label2>$VAR[skinshortcuts-fallbackart]</label2>
				<enable>!String.IsEmpty(Container(211).ListItem.Property(widget)) + !String.IsEqual(Container(211).ListItem.Property(widget),WeatherWidget) + !Container(8000).IsUpdating</enable>
				<visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>
				<disabledcolor>TextColor4</disabledcolor>
			</control>

			<!-- Edit submenu -->
			<control type="button" id="405">
				<width>1050</width>
				<height>60</height>
				<label>$LOCALIZE[31071]</label>
				<visible>String.IsEqual(Window.Property(groupname),mainmenu)</visible>
			</control>

		</control>

		<!-- Button grouplist -->
		<control type="grouplist" id="9001">
			<left>750</left>
			<top>926</top>
			<width>1620</width>
			<itemgap>30</itemgap>
			<onleft>303</onleft>
			<onright>noop</onright>
			<onup>9000</onup>
			<ondown>noop</ondown>
			<orientation>horizontal</orientation>

			<!-- Add item -->
			<control type="button" id="301">
				<width>auto</width>
				<height>60</height>
				<label>$ADDON[script.skinshortcuts 32000]</label>
			</control>

			<!-- OK Button -->
			<control type="button" id="10">
				<width>auto</width>
				<label>186</label>
				<onclick>Close</onclick>
			</control>

			<!-- Restore -->
			<control type="button" id="308">
				<width>auto</width>
				<label>$ADDON[script.skinshortcuts 32028]</label>
			</control>

		</control>

		<!-- Select dialog background workaround -->
		<control type="group">
			<visible>Window.IsActive(DialogSelect.xml) | Window.IsActive(DialogProgress.xml)</visible>
			<animation effect="fade" start="0" end="100" time="200">Visible</animation>
			<animation effect="fade" start="100" end="0" time="200" delay="150">Hidden</animation>
			<include>WindowBackgroundImage</include>
		</control>

		<control type="button" id="404">
			<left>-1000</left>
			<top>-1000</top>
			<width>10</width>
			<label>-</label>
		</control>

		<control type="wraplist" id="8000">
			<left>-1000</left>
			<top>-1000</top>
			<width>100</width>
			<height>100</height>
			<itemlayout height="100" width="100" />
			<focusedlayout height="100" width="100" />
			<content>$INFO[Container(211).ListItem.Property(widgetPath)]</content>
		</control>


	</controls>

</window>
